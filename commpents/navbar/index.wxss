/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 9999999;
}
/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 32rpx;
  /* color: #333; */
  /* color: #00f; */
  font-weight: 600;
}

.nav-capsule {
  display: flex;
  /* align-items: center; */
  margin-left: 30rpx;
  width: 180rpx;
  /* justify-content: space-between; */
  height: 100%;
  position: relative;
}
