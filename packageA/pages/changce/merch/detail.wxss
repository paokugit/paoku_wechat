.detail-hard{
  width: 100%;
  height:6rem;
  background-size: 100%;
}
.detail-hard .fui-list{
  padding-top:1.7rem;
}
.detail-hard .fui-list .subtitle,.detail-hard .fui-list .text{
  color: #ffffff !important;
}
.detail-tab{
  display: flex;
  flex-direction: row;
  width: 100%;
  padding:0.4rem 0;
}
.detail-tab navigator{
  display: flex;
  flex-direction:column;
  width: 25%;
  font-size:28rpx;
  color: #666666;
}
.detail-tab .on{
  color: #cfb898;
}
.detail-tab image{
  width: 1rem;
  height: 1rem;
  text-align: center;
  margin: 0 auto;
}
.detail-tab text{
  text-align: center;
}
.reward_box{
    width: 120rpx;
    height: 40rpx;
    background: #e01212;
    border-radius: 20rpx;
    position: absolute;
    top: 12rpx;
    left: 10rpx;
    color: #fff;
    font-size: 24rpx;
    line-height: 40rpx;
    text-align: center
}

  .bottombar{
    width: 100%;
    height: 100rpx;
    background: #fff;
    position: fixed;
    bottom: 0rpx;
    border-top: 1px solid #eee;
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: #fff;
    font-size: 30rpx
}
.mapbtn, .homebtn, .sancode{
    width: 30%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333;
}
.flex_center{
width: 32rpx;
height: 100%;
display: flex;
align-items: center;

}
.calorie_img{
width: 28rpx;
height: 28rpx;
}
.price{
width: auto;
height: 30rpx;
display: flex;
align-items: center;
}
.text_gratis{
color: #e01212;
font-size: 28rpx;
margin-left: 10rpx;
}