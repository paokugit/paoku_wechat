page{
  background:#f9f9f9;
}
.detail-hard{
  width: 100%;
  height:6rem;
  background-size: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.detail-hard .logo{
  width:4rem;
  height: 4rem;
  border-radius:12rpx;
  position: absolute;
  top:4rem;
  left:40%;
}
.intro{
  padding:30rpx;
  display: flex;
  flex-direction: column;
  margin-top: 2rem;
}
.intro .name{
  font-size: 40rpx;
  text-align: center;
  line-height: 2rem;
}
.intro .des{
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 1rem;
}
.intro .info{
  font-size: 26rpx;
  color: #666666;
}

.fixedBox{
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  border-top: 1px solid #e6e6e6;
  position: fixed;
  left: 0;
  bottom: 0;
}
.navigation{
  width: 702rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #ffffff;
  font-size: 34rpx;
  background: #01d7a1;
  margin: 16rpx auto;
  border-radius: 6rpx;
}