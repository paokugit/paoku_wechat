        <view class="header-text">
          <view class="header-name">华为京东自营官方旗舰店</view>
          <view class="header-people">2003.3万人关注</view>
        </view>
      </view>
      <view class="header-attention header-wei" catchtap="noticeWei" wx:if="{{attention == 0?true:false}}">关注</view>
      <view class="header-attention header-yi" catchtap="noticeYi" wx:if="{{attention == 1?true:false}}">已关注</view>
    </view>
  
    <view class="caption">
      <view class="tit-activity">限时秒杀</view>
      <view class="tit-tiem headercss">
        <view class="tit-year">2019-10-15 15:30</view>
        <view class="tit-look headercss">
          <image class="lookImg" src="{{globalimg}}/eyes.png"></image>
          <view class="lookPeople">5480人看过</view>
        </view>
