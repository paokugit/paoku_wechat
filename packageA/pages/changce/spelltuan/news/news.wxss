.flexcss{
  display: flex;
  align-items: center;
}


.goods-box{
  margin: 20rpx 24rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
}

.goods-img{
  width: 170rpx;
  height: 170rpx;
  margin-right: 20rpx;
  background: red;
}

.goods-name{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-guige{
  font-size: 24rpx;
  color: #999;
}

.listbox{
  margin: 26rpx;
  padding: 13rpx 0;
  border-top: 1px solid #f8f8f8;
}

.view-txt{
  font-size: 28rpx;
  color: #333;
}

.hintcss{
  font-size: 28rpx;
  color: #999;
}

.jiantou {
  width: 15rpx;
  height: 24rpx;
}


button{
  font-size: 30rpx;
  color: #333;
  border: 1px solid #f8f8f8;
  text-align: left;
  line-height: 100rpx;
  background-color: #fff;
}
button::after{
  border: none;
}

.submit{
  width: 100%;
  height: 120rpx;
  background: #01d7a1;
  font-size: 34rpx;
  line-height: 120rpx;
  color: #fff;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
}