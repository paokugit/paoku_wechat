.goods {
  background: #fff;
  margin: 20rpx 24rpx;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background: red;
  margin-right: 18rpx;
}

.logistics-state {
  font-size: 30rpx;
  color: #333;
}

.logistics-state text {
  font-size: 30rpx;
  color: #01D7A1;
}

.express {
  margin: 30rpx 0rpx 20rpx;
}

.express,
.odd-numbers {
  font-size: 26rpx;
  color: #333;
}



/* 追踪 */
.article-news {
  background: #fff;
  border-radius: 20rpx;
  margin: 20rpx 24rpx;
  padding: 24rpx 0;
}

.logisit {
  width: 100%;
  margin-left: 10rpx;
  margin-top: 50rpx;
  display: flex;

}

.express-middle-axis {
  width: 48rpx;
  position: relative;
  top: -218rpx;
  left: -1rpx;
}

.express-status-address {
  font-size: 28rpx;
  color: #666;
}

.express-statusing {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}


.online-top-closing {
  width: 2rpx;
  height: 205rpx;
  background: #d7d7d7;
  position: absolute;
  top: 25rpx;
  left: 20rpx;

}

.color {
  color: #333;
  font-weight: bold;
}

.color_second {
  color: #999;
}

.dot-closing {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50rpx;
  margin-top: 50rpx;
  background: #999;
  position: absolute;
  top: 180rpx;
  left: 14rpx;

}

.dot-closing_two {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-top: 50rpx;
  border: 1rpx solid #000;
  background: #000;
  animation: myfirst;
  animation-fill-mode: forwards;
  position: absolute;
  top: 175rpx;
  left: 4rpx;
}

.dot-shou {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 5rpx solid #B2F3E3;
  background: #01D7A1;
  margin-left: 5rpx;
  margin-top: 6rpx;
}

.dot_two {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #d7d7d7;
  background: #d7d7d7;
  margin-left: 3rpx;
  margin-top: 6rpx;
}

.express-right {
  width: 90%;
  height: 170rpx;
  color: #666;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.line {
  height: 180rpx;
}