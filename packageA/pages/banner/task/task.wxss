.header{
  position: relative;
  left: 0;
  top: 0;
}
.head-img{
  width: 100%;
  height: 472rpx;
}

.explain{
  display: flex;
  align-items: center;
  position: absolute;
  right: 24rpx;
  top: 20rpx;
}

.explain view{
  font-size: 34rpx;
  color: #f7fafa;
  margin-right: 20rpx;
}
.explain image{
  width: 32rpx;
  height: 32rpx;
}

.header-tit{
  position: absolute;
  left: 50%;
  top: 120rpx;
  transform: translate(-50%,0);
  text-align: center;
}
.main-title{
  font-size: 44rpx;
  color: #ffffff;
  margin-bottom: 27rpx;
}
.subhead{
  font-size: 30rpx;
  color: #ffffff;
}

.list-card{
  width: 100%;
  position: absolute;
  left: 0;
  top: 70%;
  margin-bottom: 100rpx;
}


.cardBox{
  margin: 0 24rpx 20rpx;
  padding: 24rpx 24rpx 10rpx;
  background: #ffffff;
  border-radius: 20rpx;
}
.overall-tit{
  font-size: 34rpx;
  color: #333333;
  margin-bottom: 40rpx;
}
.only-list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.card-left{
  display: flex;
  align-items: center;
}
.card-img{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50rpx;
  background: red;
  margin-right: 22rpx;
}
.card-main{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.card-vice{
  color: #333333;
  font-size: 22rpx;
  margin-bottom: 10rpx;
}
.card-award{
  font-size: 22rpx;
  color: #01d7a1;
}
.card-right{
  text-align: center;
}
.card-proceed{
  width: 118rpx;
  height: 54rpx;
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  line-height: 54rpx;
  background: #01d7a1;
  border-radius: 27rpx;
}

.card-achieve{
  font-size: 22rpx;
  color: #01d7a1;
}
.card-achieve::before{
  content: "已完成";
  font-size: 22rpx;
  color: #999999;
}
.card-achieve text{
  font-size: 22rpx;
  color: #999999;
}


.overall-tit{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.card-main,.card-vice{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}


.introduce{
  font-size: 24rpx;
  color: #333333;
  margin-left: 113rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 20rpx;

}

.dredge{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.dredge image{
  width: 20rpx;
  height: 10rpx;
}

/* 广告 */
.advertising{
  height: 286rpx;
  background: red;
  border-radius: 8rpx;
  margin: 0 24rpx 20rpx; 
}