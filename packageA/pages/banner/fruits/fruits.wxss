.search{
  background: #fff;
  padding: 12rpx 24rpx;
  position: relative;
  left: 0;
  top: 0;
}
.search-frame{
  height: 60rpx;
  line-height: 60rpx;
  background: #f7f7f7;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #cccccc; 
  padding-left: 74rpx;
}
.search image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 8%;
  top: 30%;
}


.carousel{
  position: relative;
}

.swiper-item{
  height: 370rpx;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dot {
  margin: 0 8rpx;
  width: 16rpx;
  height: 6rpx;
  background: #fee6de;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.dot.active {
  width: 26rpx;
  background: #fff;
}


.all-filtrate{
  width: 100%;
  height: 84rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px solid #f8f8f8;
}

.all-price,.all-sales{
  display: flex;
  align-items: center;
}
.all-synthesize,.all-price,.all-sales{
  width: 100rpx;
  height: 84rpx;
  text-align: center;
  line-height: 84rpx;
}
.all-synthesize,.all-price-text,.all-sales-sales{
  font-size: 28rpx;
  color: #666666;
}
.all-price-img,.all-sales-img{
  width: 16rpx;
  height: 21rpx;
  margin-left: 13rpx;
}

.all-switchover{
  width: 84rpx;
  height: 84rpx;
  text-align: center;
  line-height: 84rpx;
}


.nowActive{
  color: #01d7a1;
}