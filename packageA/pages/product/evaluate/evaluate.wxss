page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  background: #f8f8f8;
}

.commentBox {
  width: 100%;
  height: 100%;
  overflow: auto;
  background: pink;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.totalcomment-box {
  width: 94%;
  height: auto;
  padding: 0 3% 10rpx;
  background: #ff6;
  border-top: 1rpx solid #f8f8f8;
}

.total-top {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-left {
  width: auto;
  height: auto;
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

image {
  width: 100%;
  height: 100%;
}

.xingImg {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.total-right {
   width: auto;
  height: auto;
  display: flex;
  align-items: center;
  color: #333;
  font-size: 30rpx;
}
.labelBox {
  width: 100%;
  height: auto;
  background: #fff;
  padding-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
  align-items: center
}

.labelBox .item {
  width: auto;
  height: auto;
  padding: 10rpx 24rpx;
  color: #999;
  font-size: 26rpx;
  border: 1rpx solid #e9e9e9;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx
}

.labelBox .activeA {
  background: #01d7a1;
  color: #fff;
  border: none
}
.comment-tab-con{
  width: 100%;
  height: 1000rpx;
  background: #9ff;
  margin-top: 24rpx
}
.comment-item{
  width: 94%;
  height: 300rpx;
  padding: 24rpx 3%;
  background: #fff;
  border-radius: 20rpx;

}
.commentator-info{
  width: 100%;
  height: 70rpx;
  background: #f00;
  display: flex;
  align-items: center
}
.commentator-avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #0f0
}
.commentator-name{
  color: #333;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.star-time{
  width: 98%;
  height: 66rpx;
  padding-left: 2%;
  background: #f00;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.starsBox{
  width: auto;
  height: auto;
}
.starsImg{
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}
.commenttime{
  color: #999;
  font-size: 24rpx;
}