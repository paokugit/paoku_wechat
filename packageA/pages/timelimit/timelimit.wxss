page {
    width: 100%;
    height: 100%;
    background: #f1f1f1;
    overflow-x: hidden;
}

.timelimit-box {
    width: 100%;
    height: 100%;
    position: relative;
}

.swiper-tab {
    width: 60%;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 20%;
    text-align: center;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    color: rgb(51, 51, 51);
    font-size: 30rpx;
    background: #fff;
    border-top: 2rpx solid #f8f8f8;
}

.swiper-tab-item {
    width: auto;
    color: rgb(51, 51, 51);
}

.active {
    color: rgb(1, 215, 161);
    border-bottom: 4rpx solid rgb(1, 215, 161);
}

.show {
    width: 100%;
    display: block;
    position: absolute;
    top: 90rpx;
}

.hidden {
    display: none;
}

.scroll {
    width: 100%;
    height: auto;
}

.hotrob-box, .upcome-box {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.hot-container {
    width: 92%;
    height: auto;
    padding: 0 4%;
}

.sec-itembox {
    width: 94%;
    height: 215rpx;
    padding: 24rpx 3%;
    background: #fff;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    margin-top: 25rpx;
}
.sec-item-img {
    width: 212rpx;
    height: 212rpx;
    border-radius: 10rpx;
    position: relative;
}

.sec-saleout-img {
    width: 116rpx;
    height: 116rpx;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
}

.sec-item-content {
    width: 420rpx;
    height: 180rpx;
    margin-left: 15rpx;
    position: relative;
}

.sec-item-tit {
    width: 400rpx;
    height: 40rpx;
    color: #333;
    font-size: 34rpx;
    line-height: 40rpx;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.progressbar, .progress-text {
    width: 240rpx;
    height: 28rpx;
    position: absolute;
    top: 70rpx;
    left: 0rpx;
}

.progress-text {
    width: 210rpx;
    padding-left: 20rpx;
    font-size: 22rpx;
    color: #fff;
    display: flex;
    align-items: center;
}

.limit-num, .limit-num-none {
    width: auto;
    height: 26rpx;
    position: absolute;
    top: 70rpx;
    left: 255rpx;
    color: rgb(51, 51, 51);
    font-size: 22rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.limit-num-none{
    color: rgb(2, 204, 153);
    position: absolute;
    top: 70rpx;
    left: 0rpx;
    font-size: 26rpx
}
.sec-sale-absolute{
    width: auto;
    position: absolute;
    top: 130rpx;
    left: 0rpx;
    display: flex;
    align-items: center
}
.sec-sale, .sec-sale-none {
    color: rgb(255, 0, 0);
    font-size: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.sec-sale-none{
    color: rgb(2, 204, 153)
}
.sec-original {
    color: rgb(146, 146, 146);
    font-size: 22rpx;
    text-decoration: line-through;
    margin-left: 10rpx
}
.sale-symbol{
    font-size: 28rpx;
}
.sale-text{
    font-size: 40rpx;
}
.rob-btn, .rob-btn-none, .rob-btn-over {
    width: 140rpx;
    height: 52rpx;
    border-radius: 30rpx;
    position: absolute;
    top: 120rpx;
    right: 5rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgb(255, 0, 0);
    color: rgb(255, 255, 255);
    font-size: 24rpx;
}
.rob-btn-over{
    background: rgb(146, 146, 146)
}
.rob-btn-none{
    background: rgb(1, 215, 161)
}
.djs-box {
    width: 100%;
    height: 162rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.bg-img, .bg01-img {
    width: 149rpx;
    height: 7rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bg01-img {
    width: 150rpx;
    height: 7rpx;
}

image {
    width: 100%;
    height: 100%;
}

.sec-djs-box {
    width: auto;
    display: flex;
    justify-content: center;
    align-items: center;
}

.sec-text {
    display: flex;
    justify-content: center;
    align-items: center;
    color: rgb(51, 51, 51);
    font-size: 34rpx;
    margin-right: 20rpx;
    font-weight: bold;
}

.timeText {
    display: flex;
    justify-content: center;
    align-items: center;
}

.timebox {
    width: 50rpx;
    height: 50rpx;
    background: rgb(54, 54, 54);
    border-radius: 6rpx;
    color: rgb(254, 254, 254);
    font-size: 36rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.time-symbol {
    width: 20rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.upcome-container {
    width: 92%;
    height: auto;
    padding: 0 4%;
}
.notbegin{
    width: 100%;
    height: 1200rpx;
    background: #fff;
    padding: 142rpx 0;
}
.notbegin-con{
    display: flex;
    flex-direction: column;
    align-items: center
}
.nodata-img{
    width: 698rpx;
    height: 349rpx;
}
.notbegin-text{
    color: rgb(51, 51, 51);
    font-size: 34rpx;
    margin-top: 80rpx
}