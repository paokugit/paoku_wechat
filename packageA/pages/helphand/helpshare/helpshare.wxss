/* 输入步数页面 */

.enterBox {
  width: 690rpx;
  height: 580rpx;
  position: absolute;
  top: 610rpx;
  background: #fff;
  border-radius: 30rpx;
}

.enter-step-box {
  width: 690rpx;
  height: 600rpx;
  background: #fff;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint {
  width: 500rpx;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
}

.ipt-step {
  width: 500rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: #efefef;
  color: #a0a0a0;
  font-size: 34rpx;
}

.optional {
  font-size: 24rpx;
  color: #a0a0a0;
}

.enter-help-img {
  width: 494rpx;
  height: 146rpx;
}

/* 点击步数说明之后的弹窗-开始 */

.stepMask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
}

.step-text-box {
  width: 100%;
  height: 100%;
  position: relative;
}

.step-text {
  width: 500rpx;
  height: 260rpx;
  background: #f8f8f8;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  font-size: 32rpx;
  line-height: 60rpx;
  color: #333;
}

.step-close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 45%;
  bottom: 30%;
}

/* 点击步数说明之后的弹窗-结束 */

/* 助力失败后的弹窗-开始 */

.failMask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
}

.fail-text-box {
  width: 100%;
  height: 100%;
  position: relative;
}

.fail-text {
  width: 500rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background: #f8f8f8;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  font-size: 28rpx;
  color: #333;
}

.fail-close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 45%;
  bottom: 30%;
}

/* 助力失败后的弹窗-结束 */
