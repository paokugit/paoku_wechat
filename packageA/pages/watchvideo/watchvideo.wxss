page{
  background: #000;
}

.middle{
  height: 100vh;
}

.videotit{
  font-size: 34rpx;
  color: #fefefe;
  padding: 30rpx 30rpx 0;
  font-weight: bold;
}

.amount{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 30rpx 40rpx;
}
.volume{
  font-size: 28rpx;
  color: #fefefe;
}
.money{
  display: flex;
  align-items: center;
}
.original-price{
  font-size: 28rpx;
  color: #ffffff;
  text-decoration: line-through;
  margin-right: 20rpx;
}
.original-price::before{
  content: "￥";
}
.going-price{
  position: relative;
}
.going-price image{
  width: 72rpx;
  height: 86rpx;
  position: absolute;
  right: 10rpx;
  top: -35rpx;
  z-index: -10;
}
.going-price view{
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 50rpx;
  background: red;
  color: #ffffff;
  font-size: 40rpx;
  padding: 10rpx 20rpx;
}
.going-price view::before{
  content: "￥";
  font-size: 30rpx; 
}

.myvideo{
  position: relative;
  left: 0;
  top: 0;
}
.videoplay{
  width: 100%;
  height: 50vh;
}
.iconvideo{
  position: absolute;
  right: 30rpx;
  top:50%; 
  transform: translate(0%,-50%);
}
.videoimg{
  width: 60rpx;
  height: 60rpx;
  margin-bottom:15rpx;
}
.videotxt{
  font-size: 24rpx;
  color: #fefefe;
}
.zhuanfa{
  margin-top: 70rpx;
}
.iconcss{
  text-align: center;
}
.inviteBtn{
  width: 80rpx;
  height: 110rpx;
  opacity: 0;
  position: absolute;
  left: 0;
  top: 170rpx;
}
.notlogin-button{
  width: 80rpx;
  height: 100rpx;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
} 


.critic{
  height: 320rpx;
  margin-top: 10rpx;
  position: relative;
}

.criticList{
  width: 540rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
}
.nickname{
  color: #ff9999;
}
.content{
  color: #ffffff;
}

.nocom{
  width: 100%;
  height: 100%;
}

.criticright{
  width: 160rpx;
  height: 220rpx;
  position: absolute;
  right: 24rpx;
  top: 40rpx;
}
.criticright image{
  width: 100%;
  height: 160rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.criticright view{
  width: 100%;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  border-radius: 10rpx;
  background: #ff0000;
  color: #ffffff;
  font-size: 24rpx;
}

.hint{
  width: 442rpx;
  height: 80rpx;
  position: absolute;
  right: 200rpx;
  top: 150rpx;
}
.hint image{
  width: 100%;
  height: 100%;
}
.hint view{
  font-size: 24rpx;
  color: #e60012;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}

.finish{
  display: flex;
  align-items: center;
  margin: 15rpx 0;
}
.finish-quan{
  width: 10rpx;
  height: 10rpx;
  border-radius:50rpx;
  background: #fff;
  border: 3rpx solid  #ff9999;
}
.finish-txt{
  font-size: 24rpx;
  color: #fff;
  margin-left: 15rpx;
}

.tab-right {
  width: 549rpx;
  margin: 10rpx 24rpx;
}