page{
  background: #000;
}

.middle{
  height: 100vh;
}

.videotit{
  font-size: 34rpx;
  color: #fefefe;
  padding: 30rpx;
}

.amount{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx 184rpx;
}
.volume{
  font-size: 28rpx;
  color: #fefefe;
}
.money{
  display: flex;
  align-items: center;
}
.original-price{
  font-size: 28rpx;
  color: #ffffff;
  text-decoration: line-through;
  margin-right: 120rpx;
}
.original-price::before{
  content: "￥";
}
.going-price{
  position: relative;
  left: 0;
  top: -45rpx;
}
.going-price image{
  width: 72rpx;
  height: 86rpx;
}
.going-price view{
  border-radius: 50rpx;
  background: red;
  color: #ffffff;
  font-size: 40rpx;
  padding: 15rpx 20rpx;
  position: absolute;
  right: 0;
  top: 50rpx;
}
.going-price view::before{
  content: "￥";
  font-size: 30rpx;
}


.myvideo{
  position: relative;
  left: 0;
  top: 0;
}
.videoplay{width: 100%;}
.iconvideo{
  position: absolute;
  right: 24rpx;
  top:60rpx; 
}
.videoimg{
  width: 60rpx;
  height: 60rpx;
  margin-bottom:15rpx;
}
.videotxt{
  font-size: 24rpx;
  color: #fefefe;
}
.zhuanfa{
  margin-top: 70rpx;
}
.iconcss{
  text-align: center;
}
.inviteBtn{
  width: 80rpx;
  height: 110rpx;
  opacity: 0;
  position: absolute;
  left: 0;
  top: 170rpx;
}
.notlogin-button{
  width: 100rpx;
  height: 100rpx;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
} 


.critic{
  height: 306rpx;
  position: relative;
  margin: 0rpx 24rpx;
}
.criticList{
  width: 549rpx;
  font-size: 24rpx;
  color: red;
  margin: 15rpx 0;
}
.nickname{
  color: #ff9999;
}
.content{
  color: #ffffff;
}
.finish{
  display: flex;
  align-items: center;
  margin-top: 36rpx;
}
.finish-quan{
  width: 10rpx;
  height: 10rpx;
  margin-right: 10rpx;
  background: #f8f8f8;
  border: 8rpx solid #ff9999;
  border-radius: 50%;
}
.finish-txt{
  font-size: 24rpx;
  color: #ffffff;
}

.nocom{
  width: 100%;
  height: 100%;
}

.criticright{
  width: 140rpx;
  height: 200rpx;
  position: absolute;
  right: 0rpx;
  top: 54rpx;
}
.criticright image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 15rpx;
  margin-bottom: 10rpx;
}
.criticright view{
  width: 100%;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  border-radius: 10rpx;
  background: #ff0000;
  color: #ffffff;
  font-size: 24rpx;
}

.hint{
  width: 442rpx;
  height: 80rpx;
  position: absolute;
  right: 160rpx;
  top: 150rpx;
}
.hint image{
  width: 100%;
  height: 100%;
}
.hint view{
  font-size: 24rpx;
  color: #e60012;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}