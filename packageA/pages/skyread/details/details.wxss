.headcon{
  background: #fff;
  padding-bottom: 60rpx;
}

.headimg{
  height:352rpx;
}

.mainTitle{
  font-size: 54rpx;
  color: #333333;
  margin: 50rpx 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}

.writer{
  margin-left: 24rpx;
}
.writerA{
  font-size: 28rpx;
  color: #666666;
}
.writerB{
  font-size: 30rpx;
  color: #b3b3b3;
}

.music{
  width: 678rpx;
  height: 120rpx;
  margin: 60rpx 36rpx 70rpx; 
  border: 1px solid #eeeeee;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}
.musicimg{
  width: 70rpx;
  height: 70rpx;
  margin: 0  20rpx;
}
.musictit{
  font-size: 30rpx;
  color: #333333;
}
.musictitA{
  font-size: 24rpx;
  color: #999999;
}

.article{
  margin: 0 50rpx;
}

.transpond{
  margin-top: 100rpx;
  text-align: center;
}
.transpond image{
  width: 116rpx;
  height: 118rpx;
}
.transpond view{
  font-size: 30rpx;
  color: #333333;
}

.comment{
  padding: 60rpx 24rpx; 
  background: #f8f8f8;
}
.comment-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.all-comment{
  font-size: 30rpx;
  color: #999999;
}
.write-comment{
  font-size: 30rpx;
  color: #0eb8ef;
}

.comment-list{
  padding-bottom:50rpx;
  display: flex;

}
.left-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.name-zan{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.right-name{
  font-size: 30rpx;
  color: #999999;
}
.img-zan image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.img-zan text{
  font-size: 28rpx;
  color: #929292;
}
.right-txt{
  font-size: 30rpx;
  color: #333333;
  margin-top: 20rpx;
}

.author-name{
  display: flex;
  margin: 20rpx 0;
}
.left-author{
  width: 4rpx;
  height: 24rpx;
  border-radius: 10rpx;
  background: rgb(1, 215, 161);
  margin: 3rpx 10rpx 0 0;
}
.right-author{
  font-size: 26rpx;
  color: #999999;
}

.base{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
}
.bordercss{
  width: 96rpx;
  height: 2rpx;
  background: #b3b3b3;
}
.yuancss{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50rpx;
  margin: 0 6rpx;
  background: #b3b3b3;
}

.publish{
  width: 100%;
  height: 100%;
  background: #000;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
}
.txt-btn{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}
.release_text{
  background: #ffffff;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}
.every{
  width: 91%;
  padding: 30rpx;
}
.publishbtn{
  height: 120rpx;
  color: #ffffff;
  font-size: 34rpx;
  line-height: 120rpx;
  text-align: center;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.placss{
  color:#999999;
  font-size: 30rpx;
}