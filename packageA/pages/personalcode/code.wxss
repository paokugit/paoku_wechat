page {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
     background :#01d7a1;
}
.code-box{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.code-content{
    width: 94%;
    height: 900rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center
}
.code-tit{
    width: 394rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
    font-size: 34rpx;
    text-align: center;
     margin-top: 20rpx
}
image{
    width: 100%;
    height: 100%
}
.code-img{
    width: 394rpx;
    height: 394rpx;
    margin-top: 10rpx
}
.code-handle{
    width: 450rpx;
    height: 60rpx;
    /* background: #ff0; */
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center
}
.setdiscount, .saveimg{
    color: #01d7a1;
    font-size: 34rpx;

}

.recordbox{
    width: 92%;
    height: 80rpx;
    padding: 0 4%; 
    margin-top: 70rpx;
    /* background: pink; */
    display: flex;
    align-items: center;
    justify-content: space-between

}
.accountbox{
     width: 92%;
    height: 80rpx;
    padding: 0 4%; 
    margin-top: 20rpx;
    /* background: pink; */
    display: flex;
    align-items: center;
    justify-content: space-between
}
.record-left{
    display: flex;
    align-items: center
}
.record-img{
    width: 42rpx;
    height: 42rpx;
}
.account-img{
     width: 38rpx;
    height: 38rpx;
}
.record-text{
    color: #333;
    font-size: 28rpx;
    margin-left: 15rpx
}
.record-right{
    width: 10rpx;
    height: 18rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
  