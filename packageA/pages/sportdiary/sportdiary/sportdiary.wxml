</view>
<view class='exchangeBtn' bindtap='onSavePicClick' data-img="{{url}}">
    <view class='imgBox'>
        <image src='{{globalimg}}/download.png'></image>
    </view>
    <view class='desc'>保存到相册</view>
</view>
</view>
</view>