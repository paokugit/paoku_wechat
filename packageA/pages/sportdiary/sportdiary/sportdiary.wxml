<navigation id='Navigation' show-icon='{{showIcon}}' title="运动日记"></navigation>
<view class='sportBox'>
<view class='sportBanner' style='display:{{sportDis}}'>
    <image src="{{url}}"></image>
</view>
<view class='exBanner' style='display:{{exchangeDis}}'>
    <image src="{{url}}"></image>
</view>
<view class='sportImg'>
<view class='exchangeBtn' bindtap='exchange'>
    <view class='imgBox'>
        <image src='{{globalimg}}/exchange.png'></image>
