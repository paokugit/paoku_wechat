page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  background: #f8f8f8;
}

.storeBox {
  width: 100%;
  height: auto;
  position: relative;
}

.message {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 20%;
  left: 0rpx;
}

.msg {
  padding: 10rpx 30rpx;
  color: #fff;
  font-size: 24rpx;
  background: #333;
  opacity: 0.6;
  border-radius: 30rpx;
}

.store-tab {
  width: 100%;
  height: 88rpx;
  background: #f66;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.store-tab .item {
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 32rpx;
}

.store-tab .activeA {
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 38rpx;
  border-bottom: 8rpx solid #01d7a1;
}

.item image {
  width: 167rpx;
  height: 54rpx;
}

.store-itembox {
  width: 94%;
  height: auto;
  background: pink;
  margin-top: 20rpx;
  padding: 0 3%;
}

.shopItem {
  width: 96%;
  height: auto;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 24rpx 2%;
}

.shop-titlebox {
  width: 100%;
  height: 90rpx;
  position: relative;
}

.shopLogo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
}

.shoptit {
  width: 400rpx;
  color: #333;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  position: absolute;
  top: 5;
  left: 92rpx;
}

.indetify {
  width: 131rpx;
  height: 35rpx;
  position: absolute;
  bottom: 10rpx;
  left: 92rpx;
}

.goshop {
  width: 132rpx;
  height: 53rpx;
  border: 1rpx solid #01d7a1;
  border-radius: 30rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dianpu {
  width: 30rpx;
  height: 27rpx;
  margin-right: 8rpx;
}

.signature-box {
  width: 100%;
  margin-top: 10rpx;
}

.signature {
  width: 645rpx;
  color: #333;
  font-size: 30rpx;
  height: auto;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.label {
  padding: 4rpx 12rpx;
  border: 1rpx solid #01d7a1;
  border-radius: 30rpx;
  margin-right: 10rpx;
  color: #01d7a1;
  font-size: 24rpx;
}

.Imgbox {
  width: 100%;
  height: 273rpx;
  padding: 16rpx 0;
  background: #0f0;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-around;
}

.imgItem {
  width: 210rpx;
  height: 270rpx;
  background: #f66;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.productImg {
  width: 200rpx;
  height: 180rpx;
  border-radius: 5rpx;
}

.productTit {
  width: 180rpx;
  color: #333;
  font-size: 26rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.price-box {
  width: 190rpx;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.handle-box {
  width: 100%;
  height: 45rpx;
  background: #f88;
  margin-top: 20rpx;
  position: relative;
}

.comment-box, .transmit-box, .like-box {
  width: auto;
  height: auto;
  display: flex;
  align-items: center;
}

.comment-box {
  position: absolute;
  top: 0;
  left: 0;
}

.transmit-box {
  position: absolute;
  top: 0;
  left: 122rpx;
}

.like-box {
  position: absolute;
  top: 0;
  right: 5rpx;
}
