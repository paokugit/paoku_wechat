/* pages/discount/merchcode/merchcode.wxss */
page {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    /* background: #f8f8f8; */
    background: #f1f1f1;
}

.merchcode-box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
image{
    width: 100%;
    height: 100%
}
.zkb-box{
    width: 690rpx;
    height: 270rpx;
    position: relative;
    margin-top: 20rpx;
    margin-bottom: 10rpx
}
.zkb-text-box{
    width: 90%;
    height: 100rpx;
    padding: 0 5%;
    position: absolute;
    top: 10rpx;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center
}
 .zkbcode{
    color: #fff;
    font-size: 38rpx;
    font-weight: bold
}
.zhuanxiang{
     color: #fff;
    font-size: 26rpx;
      font-weight: bold
}

.zkb-read{
    width: 90%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 5%;
    position: absolute;
    bottom: 40rpx;
    left: 0;
    color: #fff;
    font-size: 28rpx
}
.hint-text{
     width: 90%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 5%;
    position: absolute;
    bottom: 120rpx;
    left: 0;
    color: #fff;
    font-size: 28rpx
}