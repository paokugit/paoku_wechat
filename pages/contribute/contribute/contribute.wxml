        <!-- 还差2项 -->
        <view class='condition-state01' style='display:{{statedisp01}}'>
            <view class='rz-box01'>
                <view class='open-condition'>完成以下信息，即可开通</view>
                <view class='reminder'>为了保证安全，请务必认真填写</view>
            </view>
            <view class='condition-item-box'>
                <view class='mobile-box'>
                    <view class='mobile-img'>
                        <image src='{{globalimg}}/mobile-n@2x.png'></image>
                    </view>
                    <view class='mobile-text'>手机号码</view>
                </view>
                <view class='wechat-box'>
                    <view class='mobile-img'>
                        <image src='{{globalimg}}/wechat-n@2x.png'></image>
                    </view>
                    <view class='mobile-text'>微信号</view>
                </view>
            </view>
            <view class='btn-box'>
                <button class='openbtn' bindtap='openBtn'>立即开通</button>
            </view>

        </view>
        <!-- 还差2项 -->
        <!-- 还差1项微信 -->
