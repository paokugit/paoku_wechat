<view class='contribute_box'>
    <view class='contribute-top'>
        <image src='{{globalimg}}/gx-bg@2x.png'></image>
        <view class='open-state'  wx:if="{{bind==0}}">暂未开通</view>
        <view class='open-state'  wx:if="{{bind==1}}">{{credit4}}</view>
        <view class='update'>实时更新</view>
    </view>
    <view class='change-record-box'>
        <view class='white-bg'>
            <image src='{{globalimg}}/white-bg@2x.png'></image>
            <navigator class='record-box' url='/pages/contribute/record/record'>
                <image class='biandong-img' src='{{globalimg}}/biandong@2x.png'></image>
                <text class='record-text'>变动记录</text>
           </navigator>
            <navigator class='desc-box' url='/pages/contribute/explain/explain'>
                <image class='biandong-img' src='{{globalimg}}/gxjd@2x.png'></image>
                <text class='record-text'>贡献值解读</text>
            </navigator>
        </view>
    </view>
