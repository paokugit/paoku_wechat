page {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    background: #fff;
}

.hotdetail-box {
    width: 100%;
    height: auto;
    background: #fff;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.detail-tit{
    width: 96%;
    padding: 20rpx 2%;
   height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #323232;
     font-size: 40rpx;
    font-weight: bold;
    margin-top: 5rpx
}
.detail-time{
     width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #323232;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
}
.explain-main{
    width: 94%;
    height: auto;
    padding: 0 3%;
    /* background: #0f0; */
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #323232;
    font-size: 32rpx;
    line-height: 60rpx
}