/* pages/discount/scancode/scancode.wxss */

page {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    /* background: #f8f8f8; */
     background: #f1f1f1;
}

.setklldiscount-box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.set-box{
    width: 90%;
    height: auto;
    /* background: #f00; */
    margin-top: 30rpx
}
.list-box {
    width: 100%;
    height: 202rpx;
    background: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.list-top {
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid #f8f8f8;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.list-bottom{
     width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.order-text {
    width: auto;
    margin-left: 30rpx;
    font-size: 34rpx;
    color: #262626;
}

.ordeript, .calorieipt {
    width: 200rpx;
    font-size: 34rpx;
    color: #262626;
    text-align: right;
    margin-right: 30rpx
}
.confirmbox{
    width: 600rpx;
    height: 100rpx;
    margin-top: 80rpx
}
button::after {
    border: none;
}
.confirmbtn{
    width: 100%;
    height: 100%;
    line-height: 100rpx;
    background: #01d7a1;
    color: #fff;
    font-size: 34rpx
}

