/* pages/discount/code/code.wxss */
page {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    background: #01d7a1;
}
.code-box{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center
}
.code-content{
    width: 94%;
    height: 800rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center
}
.code-tit{
    width: 394rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
    font-size: 34rpx;
    /* background: #f00 */
}
image{
    width: 100%;
    height: 100%
}
.code-img{
    width: 394rpx;
    height: 394rpx;
    /* background: #f88; */
    margin-top: 20rpx
}
.code-handle{
    width: 450rpx;
    height: 60rpx;
    /* background: #ff0; */
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center
}
.setdiscount, .saveimg{
    color: #01d7a1;
    font-size: 34rpx;

}

.recordbox{
    width: 92%;
    height: 80rpx;
    padding: 0 4%; 
    margin-top: 70rpx;
    /* background: pink; */
    display: flex;
    align-items: center;
    justify-content: space-between

}
.record-left{
    display: flex;
    align-items: center
}
.record-img{
    width: 42rpx;
    height: 42rpx;
}
.record-text{
    color: #333;
    font-size: 28rpx;
    margin-left: 10rpx
}
.record-right{
    width: 36rpx;
    height: 36rpx;
    color: #666;
}
  