<view class='account-box'>
    <view class='zkb-img'>
        <view class='account-num-box'>
            <view class='account-num'>{{credit}}</view>
            <view class='account-yuan'>元</view>
        </view>
        <view class='account-btn-box'>
            <view class='codebtn' bindtap='codebtn'>
                <image src='{{globalimg}}/maidan@2x.png'></image>
            </view>
            <view class='rechargebtn' bindtap='rechargebtn'>
                <image src='{{globalimg}}/chongzhi@2x.png'></image>
            </view>
        </view>
        <image src='{{globalimg}}/zhekoubao@2x.png'></image>
    </view>
    <!-- tab -->
    <block>
        <block wx:if="{{!show}}">
            <loading>加载中...</loading>
        </block>
    </block>
    <block wx:if="{{show}}">
        <view class="swiper-tab">
            <view bindtap="myTab" class="swiper-tab-item {{type==1?'active':''}}" data-type="1">充值</view>
            <view bindtap="myTab" class="swiper-tab-item {{type==2?'active':''}}" data-type="2">支出</view>
        </view>
        <view class="{{type==1 ? 'show':'hidden'}}">
            <scroll-view>

                <view class='expend-box' wx:for="{{list}}" wx:key="{{index}}">
                    <view class='expend-list'>
                        <view class='list-left'>
                            <view class='expend-title'>{{item.remark}}</view>
                            <view class='expend-time'>{{item.createtime}}</view>
                        </view>
                        <view class='list-right'>+{{item.num}}</view>
                    </view>
                </view>
            </scroll-view>
        </view>
        <view class="{{type==2 ? 'show':'hidden'}}">
            <scroll-view>
                <view class='recharge-box' wx:for="{{list}}" wx:key="{{index}}">
                    <navigator class='recharge-list' url='/pages/discount/mingxi/mingxi?id={{item.id}}'>
                        <view class='list-left'>
                            <view class='expend-title'>{{item.remark}}</view>
                            <view class='expend-time'>{{item.createtime}}</view>
                        </view>
                        <view class='list-right'>{{item.num}}</view>
                    </navigator>
                </view>
            </scroll-view>
        </view>
    </block>
    <!-- tab -->
    <block>
        <block wx:if="{{total<=0&&!loading}}">
            <view class="fui-loading empty">
                <view class="text">暂无数据</view>
            </view>
        </block>
    </block>
</view>
<block>
    <block wx:if="{{loading}}">
        <view class="fui-loading">
            <view class="icon"></view>
            <view class="text">正在加载</view>
        </view>
    </block>
</block>
<block>
    <block wx:if="{{loaded&&list.length>0}}">
        <view class="fui-loading empty">
            <view class="text">没有更多了</view>
        </view>
    </block>
</block>