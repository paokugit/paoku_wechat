<block>
  <block wx:if="{{!show}}">
    <loading>加载中...</loading>
  </block>
</block>
<block>
  <block wx:if="{{show}}">
    <navigation id='Navigation' show-icon='{{showIcon}}' title="我的订单">
    </navigation>
    <view class="page navbar order">
      <scroll-view class="fui-tab-scroll fixed" scrollX="true" style="overflow-x:scroll;margin-top:{{gloheight}}px">
        <view bindtap="selected" class="item {{status==''?'select':''}}" data-type="">全部</view>
        <view bindtap="selected" class="item {{status=='0'?'select':''}}" data-type="0">待付款</view>
        <view bindtap="selected" class="item {{status=='1'?'select':''}}" data-type="1">待发货</view>
        <view bindtap="selected" class="item {{status=='2'?'select':''}}" data-type="2">待收货</view>
        <view bindtap="selected" class="item {{status=='3'?'select':''}}" data-type="3">已完成</view>
        <view bindtap="selected" class="item {{status=='4'?'select':''}}" data-type="4">退换货</view>
        <view bindtap="selected" class="item {{status=='5'?'select':''}}" data-type="5">回收站</view>
      </scroll-view>
      <block>
        <block wx:if="{{list.length!=0}}">
          <view class="contain">
            <block wx:for="{{list}}">
              <view class="fui-list-group noclick" style="margin-top:20rpx;border-radius:20rpx">
                <!-- 郝艳萍 -->
                <view class="merch-title-box">
                  <view class="merchinfo-box">
                    <image class="merchImg" src="{{globalimg}}/dd_inco_dp@2x.png"></image>
                    <text selectable="true">{{item.merchname}}</text>
                  </view>
                  <view class="statusBox">
                    <view class="{{statuscss}}" style="color:#01d7a1">{{item.statusstr}}</view>
                    <view class="line"></view>
                    <image bindtap="delete" class="deleteImg" src="{{globalimg}}/dd_inco_thh_sc@2x.png" data-orderid="{{item.id}}" data-type="1"></image>
                  </view>
                </view>
                <navigator hoverClass="none" openType="navigate" url="/pages/order/detail/index?id={{item.id}}">
                  <!-- <view class="fui-list-group-title" style="color:#666;font-size:26rpx">
                    <view class="order-num">
                      <block>
                        <block wx:if="{{item.iscycelbuy==1}}">
                          <text class="cycle-tip">周期购</text>
                        </block>
                      </block>
                      <text selectable="true">订单号：{{item.ordersn}}</text>
                      <text selectable="true">{{item.merchname}}</text>
                    </view>
                    <view class="{{statuscss}}">{{item.statusstr}}</view>
                  </view> -->

                  <block wx:for="{{item.nogift}}" wx:for-index="key" wx:for-item="val">
                    <view class="fui-list goods-info">
                      <view class="fui-list-media">
                        <image class="goods_img" style="border-radius:10rpx;width:218rpx;height:218rpx" src="{{val.thumb}}"></image>
                      </view>
                      <view class="fui-list-inner" style="height:210rpx;position:relative">
                        <view class="productTit">{{val.title}}</view>
                        <view class="subtitle text-left">{{val.optiontitle}}</view>

                        <view class="productnum">
                          <view class="priceBox">¥
                            <text style="color:#333;font-size:34rpx">{{val.price/val.total}}</text>
                          </view>
                          <view style="color:#666;font-size:30rpx">x
                            <text>{{val.total}}</text>
                          </view>
                        </view>
                        <view class="salereturn">此订单7天无理由退货(使用后不支持) </view>
                        <view class="salesuccess">退款成功</view>
                      </view>

                    </view>
                  </block>
                  <block>
                    <block wx:if="{{item.gift}}">
                      <view class="fui-list no-border" style="background: #f9f9f9;margin-top: 4rpx">
                        <block wx:for="{{item.gift}}" wx:for-index="index2" wx:for-item="val">
                          <block>
                            <block wx:if="{{index2<5}}">
                              <view class="fui-list-media">
                                <image src="{{val.thumb}}" style="width:100rpx;height:100rpx;"></image>
                              </view>
                            </block>
                          </block>
                        </block>
                        <view class="fui-list-inner"></view>
                        <view class="row-remark">
                          <view>
                            <text>共{{item.gift.length}}件</text>
                          </view>
                        </view>
                      </view>
                    </block>
                  </block>
                  <view class="fui-list list-padding">
                    <!-- <text class="fui-list-inner text-right  ">共{{item.goods[0].goods.length}}个商品 
                    
                    <text style="margin-left:30rpx">实付</text>
                    <text class="text-danger">¥<text>{{item.price}}</text>
                    </text>
                    </text> -->
                    <text class="fui-list-inner text-right totle">
                      <text style="margin-right:40rpx">共{{item.goods[0].goods.length}}件商品</text>
                    <text>合计:<text style="color:#333;font-size:28rpx;margin-left:10rpx">¥</text>
                    <text style="color:#333;font-size:32rpx;margin-left:8rpx">{{item.price}}</text></text>
                    </text>

                  </view>
                </navigator>
                <!-- 郝艳萍 -->
                <!-- <block>
                  <block wx:if="{{item.canpay}}">
                    <view class="btn btn-default btn-default-o" bindtap="contactbtn">
                      联系卖家
                    </view>
                  </block>
                </block> -->
                <!-- 郝艳萍 -->
                <block>
                  <block wx:if="{{status!=4}}">
                    <view class="fui-list list-padding" style="padding:0 24rpx">
                      <view class="fui-list-inner text-right" style="padding:10rpx 0">
                        <block>
                          <block wx:if="{{!item.canrestore}}">
                            <block>
                              <block wx:if="{{item.cancancel}}">
                                <view class="btn btn-default btn-default-o">
                                  <picker bindchange="cancel" data-orderid="{{item.id}}" range="{{cancel}}" value="{{cancelindex}}">取消订单</picker>
                                </view>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.canpay}}">
                                <navigator class="btn btn-danger-hlp" openType="navigate" url="/pages/order/pay/index?id={{item.id}}">
                                  支付订单
                                </navigator>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.canverify&&!item.isonlyverifygoods}}">
                                <view bindtap="code" class="btn btn-danger btn-danger-hlp" data-orderid="{{item.id}}">{{item['dispatchtype']==1?'我要取货':'我要使用'}}</view>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.canverify&&item.verifygoods_id&&item.isonlyverifygoods}}">
                                <navigator class="btn btn-default btn-default-o btn-sm" url="/pages/verifygoods/detail/index?id={{item.verifygoods_id}}">我要使用</navigator>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.candelete}}">
                                <view bindtap="delete" class="btn btn-default btn-default-o" data-orderid="{{item.id}}" data-type="1">
                                  删除订单
                                </view>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.cancomment2}}">
                                <navigator class="btn btn-default btn-default-o" openType="navigate" url="/pages/order/comment/index?id={{item.id}}">
                                  追加评价
                                </navigator>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.cancomment}}">
                                <navigator class="btn btn-danger btn-danger-hlp" openType="navigate" url="/pages/order/comment/index?id={{item.id}}">
                                  评价
                                </navigator>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.cancomplete&&item.iscycelbuy!=1}}">
                                <view bindtap="finish" class="btn btn-danger btn-danger-hlp" data-orderid="{{item.id}}">
                                  确认收货
                                </view>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.canrefund}}">
                                <navigator class="btn btn-default" openType="navigate" url="/pages/order/refund/index">{{item.refundtext}}</navigator>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.cancancelrefund}}">
                                <navigator class="btn btn-default-o btn-cancel" openType="navigate">取消申请</navigator>
                              </block>
                            </block>
                            <block>
                              <block wx:if="{{item.hasexpress&&item.iscycelbuy!=1}}">
                                <navigator class="btn btn-default" openType="navigate" url="/pages/order/express/index?id={{item.id}}">
                                  查看物流
                                </navigator>
                              </block>
                            </block>
                          </block>
                        </block>
                        <block>
                          <block wx:if="{{item.canrestore}}">
                            <view bindtap="delete" class="btn btn-default btn-default-o" data-orderid="{{item.id}}" data-type="2">彻底删除订单</view>
                            <view bindtap="delete" class="btn btn-default btn-default-o" data-orderid="{{item.id}}" data-type="0">恢复订单</view>
                          </block>
                        </block>
                      </view>
                    </view>
                  </block>
                </block>
              </view>
            </block>
          </view>
        </block>
      </block>
      <block>
        <block wx:if="{{list.length==0&&empty}}">
          <view class="center">
            <view class="empty">
              <image class="light" src="/static/images/icon/nolist.png"></image>
              <view class="text-cancel">您暂时没有任何订单哦！</view>
              <navigator class="btn btn-danger-hlp" openType="switchTab" url="/pages/index/index">去首页逛逛吧</navigator>
            </view>
          </view>
        </block>
      </block>
      <navigator class="fui-dot" hoverClass="none" openType="switchTab" url="/pages/member/index/index">
        <text class="icox icox-huiyuan1" style="color:#fff;font-size:40rpx"></text>
      </navigator>
      <include src="/pages/order/public/verify.wxml"></include>
      <include src="/pages/common/menu.wxml"></include>
    </view>
  </block>
</block>