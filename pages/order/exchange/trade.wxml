<navigation id='Navigation' show-icon='{{showIcon}}' title="退款申请"></navigation>
<loading wx:if="{{!show}}">加载中...</loading>


<view wx:if="{{show}}">
  <block wx:for="{{goodslis.goods}}" wx:key="index">
    <view class="productInfo">
      <view class="thumb-box ">
        <image class="productImg" src="{{item.thumb}}"></image>
        <view class="productdesc ">
          <view class="productname ">{{item.title}}</view>
          <view class="productstandard ">{{item.option_name}}</view>
        </view>
      </view>

      <view class="proState">
        <view class="state-remark">换货原因:</view>
        <view class="statepicker">
          <picker bindchange="bindReasonChange" value="{{index}}" range="{{reasonarr}}" style="width:100%">
            <text style="color:#333;font-size:28rpx">{{reason}}</text>
          </picker>
          <image class="jiantou" src="{{globalimg}}/dd_inco_tkcg_fh@2x.png"></image>
        </view>
      </view>

      <view class="proState">
        <view class="state-remark">换货商品:</view>
        <view class="statepicker" catchtap="showModal" data-goodsid="{{item.goods_id}}" data-single="{{goodslis.is_team}}" data-morespec="{{item.more_spec}}">
          <view class="tradebtn" style="width:100%;color:#333;font-size:28rpx">{{num}}件；{{specsTitle}}</view>
          <image class="jiantou" src="{{globalimg}}/dd_inco_tkcg_fh@2x.png"></image>
        </view>
      </view>

      <view class="prostate-address">
        <view class="state-remark">收货地址:</view>
        <view class="statepicker">
          <view class="address-box">
            <view class="address-title">
              <view class="realname">{{goodslis.address.realname}}</view>
              <view class="mobile">{{goodslis.address.mobile}}</view>
            </view>
            <view class="address-text">{{goodslis.address.province}}{{goodslis.address.city}}{{goodslis.address.area}}{{goodslis.address.address}}</view>
          </view>
        </view>
      </view>

      <view class="proState-radius">
        <view class="state-remark">换货说明:</view>
        <view class="statepicker">
          <input class="explainIpt" style="width:100%" bindinput="inputChange" placeholder="选填"></input>
        </view>
      </view>
    </view>
  </block>

	<view class="fui-footer text-right ">

		<view bindtap="submit" data-orderid="{{goodslis.order_id}}" class="btn btn-danger-hlp btn-sm btn-submit">提交申请</view>

	</view>

</view>

<view class="trademask" hidden="{{hideModal}}">
	<view class="trademask-con">
		<view class="productcon bottom-pos" animation="{{animationData}}">
			<view class="tradeTit">
				<text>换货商品</text>
				<image class="closebtn" bindtap="hideModal" src="{{globalimg}}/tck_inco_quxiao@2x.png"></image>
			</view>

      <view class="outerbox">
        <block wx:for="{{standard.specs}}" wx:for-item="specslit" wx:for-index="idx" wx:key="*this">
          <view class="balltitle">{{specslit.title}}</view>
          
          <view class="balltitle-list">
            <block wx:for="{{specslit.items}}" wx:for-item="itemlit" wx:key="itemind">
              <view class="balltitle-tetx {{chooseList[idx].id==itemlit.id?'textactive':''}}" catchtap="selectGuige" data-id="{{itemlit.id}}"  data-idx="{{idx}}" data-thumb="{{itemlit.thumb}}" data-title="{{itemlit.title}}">{{itemlit.title}}</view>
            </block>
          </view>
        </block> 
      </view>

			<!-- 换货数量 -->
			<view class="quantity-box">
				<text style="color:#333;font-size:34rpx;font-weight:bold">换货数量</text>
				<view style="width:200rpx">
					<view class="stepper">
						<!-- 减号 -->
						<text class="{{minusStatus}}" style="{{goodslis.is_team==0?'':'color:#999;'}}" bindtap="{{goodslis.is_team==0?'bindMinus':''}}">-</text>
						<!-- 数值 -->
						<input type="number" bindchange="bindManual" value="{{num}}" />
						<!-- 加号 -->
						<text class="normal" style="{{goodslis.is_team==0?'':'color:#999;'}}" bindtap="{{goodslis.is_team==0?'bindPlus':''}}">+</text>
					</view>
				</view>
			</view>
			<view class="confirmbox">
				<button class="confirmbtn" catchtap="confirm">确定</button>
			</view>
		</view>
	</view>
</view>