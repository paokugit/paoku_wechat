<view class="{{isIpx?'fui-iphonex-button':''}}"></view>
<block>
  <block wx:if="{{!show}}">
    <loading>加载中...</loading>
  </block>
</block>
<block>
  <block wx:if="{{show}}">
    <navigation id='Navigation' show-icon='{{showIcon}}' title="我的足迹"></navigation>
    <view class="page footer {{paddingb}}">
      <block>
        <block wx:if="{{total>0}}">
          <view class="fui-list-group">
            <block wx:for="{{list}}" wx:key="index">
              <view class="fui-list-group-title noclick">
                <view class="today todayA" wx:if="{{item.type == 0?true:false}}">今天</view> 
                <view class="today" wx:elif="{{item.type == 1?true:false}}">昨天</view>
                <view class="today" wx:else>{{item.time}}</view>
              </view>

              <block wx:for="{{item.dt}}"  wx:for-item="itemdt" wx:key="indexdt">
                <label bindtap="itemClick" class="fui-list" data-goodsid="{{itemdt.goodsid}}" data-id="{{itemdt.id}}">
                  <block>
                    <block wx:if="{{isedit}}">
                      <view class="fui-list-media">
                        <radio checked="{{checkObj[itemdt.id]?true:''}}" class="zoom-80" color="#ef4f4f"></radio>
                      </view>
                    </block>
                  </block>
                  <view class="fui-list-media">
                    <image src="{{itemdt.thumb}}"></image>
                  </view>
                  <view class="fui-list-inner">
                    <view class="subtitle">{{itemdt.title}}</view>
                    <view class="text" style="font-size: 30rpx;height:50rpx;line-height:50rpx">
                      <text class="text-danger" style="color:#01d7a1;">¥{{itemdt.marketprice}}</text>
                      <image style="width:50rpx;height:50rpx;position:absolute;top:0;right:10rpx" src="{{globalimg}}/gz_inco_gwc@2x.png"></image>
                    </view>
                  </view>
                </label>
              </block>
                
            </block>
          </view>
        </block>
      </block>
      <block>
        <block wx:if="{{loading}}">
          <view class="fui-loading">
            <view class="icon"></view>
            <view class="text">正在加载</view>
          </view>
        </block>
      </block>
      <block>
        <block wx:if="{{loaded&&list.length>0}}">
          <view class="fui-loading empty">
            <view class="text">没有更多了</view>
          </view>
        </block>
      </block>

      <view class="emptyBox" wx:if="{{total <= 0?true:false}}">
        <image class="emptyImg" src="{{globalimg}}/wdzj_img_kq@2x.png"></image>
        <navigator class="look" openType="switchTab" url="/pages/index/index">去首页逛逛吧</navigator>
      </view>
      
      <block>
        <block wx:if="{{list.length>0}}">
          <view class="fui-footer {{iphonexnavbar}}">
            <view class="tool">
              <block>
                <block wx:if="{{isedit}}">
                  <view class="check">
                    <label bindtap="checkAllClick">
                      <radio checked="{{isCheckAll?true:''}}" class="zoom-80" color="#ef4f4f"></radio>
                      <text>全选</text>
                    </label>
                  </view>
                </block>
              </block>
              <view class="text"></view>
              <view class="btns">
                <block>
                  <block wx:if="{{!isedit}}">
                    <view bindtap="btnClick" class="btn btn-dangers" data-action="edit">编辑</view>
                  </block>
                </block>
                <block>
                  <block wx:if="{{isedit}}">
                    <view bindtap="btnClick" class="btn btn-warning {{checkNum>0?'':'disabled'}}" data-action="delete">删除</view>
                  </block>
                </block>
                <block>
                  <block wx:if="{{isedit}}">
                    <view bindtap="btnClick" class="btn btn-dangers " data-action="finish">完成</view>
                  </block>
                </block>
              </view>
            </view>
          </view>
        </block>
      </block>
      <include src="/pages/common/menu.wxml"></include>
    </view>
  </block>
</block>