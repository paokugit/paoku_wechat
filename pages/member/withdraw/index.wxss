.fui-cell-group .fui-cell .fui-input.money {
    font-size: 45rpx;
}

.fui-cell.no-border::before {
    display: none;
}

.fui-cell-group .fui-cell .fui-cell-icon {
    width: auto;
    height: auto;
}

.fui-cell image {
    width: 52rpx;
    height: 52rpx;
}

.fui-cell.applyradio::after {
    content: " ";
    position: absolute;
    left: 20rpx;
    right: 20rpx;
    top: 0;
    height: 1px;
    border-top: 1px solid #ebebeb;
    color: #D9D9D9;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}
