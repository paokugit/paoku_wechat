@keyframes kf-marque-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-33.3%);
  }
}

.marquee {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: none;
  display: block;
  margin: 0 auto;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: clip;
  position: relative;
  font-size: 26rpx;
  background: #e9f8f5;
  color: #01d7a1;
}

.marquee .content {
  display: inline-block;
  position: relative;
  padding-right: 10px;
  animation: kf-marque-animation 20s linear infinite;
  white-space: nowrap;
}

