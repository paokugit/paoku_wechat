page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  background: #eee;
}

.balanceBox {
  width: 100%;
  height: 100%;
  background: #eee;
  position: relative;
}

.balance-header {
  width: 100%;
  height: 400rpx;
  position: relative;
  background: #fff;
}

image {
  width: 100%;
  height: 100%;
}

.balance-header-top {
  width: 100%;
  height: 60%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.top-text {
  width: auto;
  height: auto;
  font-size: 32rpx;
  color: #fff;
  font-family: PingFang SC;
}

.top-num {
  width: auto;
  height: auto;
  margin-top: 10rpx;
  font-size: 60rpx;
  color: #fff;
  font-family: 'DIN Next LT Pro';
}

.balance-header-bottom {
  width: 100%;
  height: 40%;
  position: absolute;
  left: 0rpx;
  bottom: 10%;
  display: flex;
  justify-content: space-around;
}

.bottom-left {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.income-text {
  width: auto;
  height: auto;
  font-size: 26rpx;
  color: #ffffff;
  font-family: PingFang SC;
}

.income-num {
  width: auto;
  height: auto;
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #fff;
  font-family: 'DIN Next LT Pro';
}

.bottom-right {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* footer */

.balance-foot, .form-foot {
  width: 93%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  margin-left: 3%;
}

.form-foot {
  position: absolute;
  left: 0;
  top: 0;
}

.footerForm {
  width: 330rpx;
  height: 240rpx;
  opacity: 0;
}

.navbtn {
  width: 330rpx;
  height: 240rpx;
  opacity: 0;
}

.foot-con {
  width: 340rpx;
  height: 240rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.imgBox {
  width: 50rpx;
  height: 50rpx;
}

.imgCon {
  width: 80rpx;
  height: 50rpx;
  margin-top: 10rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color: #262626;
  font-family: PingFang SC;
  font-weight: 600;
}
