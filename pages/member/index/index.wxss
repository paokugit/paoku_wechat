.dots{ 
  position: absolute; 
  left: 0; 
  right: 0; 
  bottom: 20rpx; 
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  margin: 0 8rpx; 
  width: 28rpx; 
  height: 6rpx; 
  background: #b7fdeb; 
  border-radius: 8rpx; 
  transition: all .6s; 
} 
.dots .dot.active{ 
  background: #00d8a0; 
}

