@import "../../common/city-picker.wxss";

.btn.btn-dangers {
  background: #01d7a1;
  color: #fff;
  border: 1px solid #01d7a1;
}

.addresslabel {
  padding: 24rpx;
  background: #fff;
  display: flex;
}

.address-tit {
  width: 20%;
  height: auto;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #333;
}

.address-right {
  width: 80%;
  height: auto;
}

.labelBox {
  width: 100%;
  height: auto;
  padding-top: 20rpx;
  padding-left: 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.labelBox .item {
  width: auto;
  height: auto;
  padding: 10rpx 34rpx;
  color: #999;
  font-size: 26rpx;
  border: 1rpx solid #e9e9e9;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.labelBox .activeA {
  background: #666;
  color: #fff;
  border: none;
}

.comment-tab-con {
  width: 100%;
  height: auto;
  background: #9ff;
  margin-top: 24rpx;
}

.comment-item {
  width: 94%;
  height: auto;
  padding: 24rpx 3%;
  background: #fff;
  border-radius: 20rpx;
}

.custom-box {
  width: 432rpx;
  height: 50rpx;
  border-radius: 30rpx;
  padding-left: 24rpx;
  border: 2rpx solid #f0f0f0;
  position: relative;
}

.customipt {
  width: 350rpx;
  height: 48rpx;
  color: #333;
  font-size: 26rpx;
}

.custom-qr {
  width: 106rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background: #666;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  border-radius: 0 30rpx 30rpx 0;
}

.body-view {
  padding: 24rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.switch-tit {
  color: #333;
  font-size: 30rpx;
}