.listHead{
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: rgb(51, 51, 51);
  font-size: 34rpx;
  background: #fff;
}

.product{
  margin: 30rpx 24rpx; 
  padding: 24rpx; 
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}

.productImg{
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}

.productCon{
  width: 80%;
  padding-left: 20rpx;
}
.conTit{
  height: 100rpx;
  color: rgb(51, 51, 51);
  font-size: 34rpx;
  
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.conMoney{
  position: relative;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.conMoneyA{
  color: rgb(224, 18, 18);
  font-size: 24rpx;
  margin-right: 10rpx;
}
.conMoneyB{
  color: rgb(146, 146, 146);
  font-size: 18rpx;
  text-decoration:line-through;
}
.btnGet{
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  color: rgb(255, 254, 254);
  background: red;
  border-radius: 50rpx;
}