        <view class="titleB" wx:if="{{item.status == 2?true:false}}">过期未领取</view>
        <view class="getStateImg">
          <image src="{{globalimg}}/{{item.status == 1?'ylq@2x.png':'ysx@2x.png'}}"></image>
