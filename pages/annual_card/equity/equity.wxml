    <image class="mai_06" src="{{globalimg}}/mai_08.jpg"></image>
    <image class="mai_06" src="{{globalimg}}/mai_09.jpg"></image>
    <image class="mai_06" src="{{globalimg}}/mai_10.jpg"></image>
  </view>
