        <swiper autoplay="{{autoplayA}}" interval="{{intervalA}}" duration="{{durationA}}" circular="{{circularA}}" indicator-dots="true" indicator-color="rgb(225,225,225)" indicator-active-color="rgb(250,230,150)">
          <block wx:for="{{goods_list}}" wx:key="index">
            <swiper-item>
              <navigator url="/pages/goods/detail/index?id={{item.id}}">
                <image class="bannerGif" src="{{item.image}}"></image>
