.equity_img{
  width: 100%;
  height: 327rpx;
}
.dredgeBtn{
  width: 500rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right, rgb(217,171,122) , rgb(240,219,192));
  position: fixed;
  left: 50%;
  bottom: 10rpx;
  transform: translate(-50%, 0%);
  z-index: 100;
}
.dredgeBtn text{
  font-size: 35rpx;
  color: rgb(50, 54, 66);
}
.moneyIcon{
  width: 65rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 18rpx;
  color: #fff;
  border-top-left-radius: 45rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  position: absolute;
  right: 45rpx;
  top: 10rpx;
  background: linear-gradient(to right, rgb(254,130,151) , rgb(242,32,52));
}