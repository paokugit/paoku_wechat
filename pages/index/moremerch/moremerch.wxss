.nearbyshops-box{
    width: 100%;
    height: auto;
    padding-top: 10rpx;
    background: #f8f8f8;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center
}
.nearbyshop-box{
    width: 726rpx;
    height: 220rpx;
    background: #fff;
    margin-bottom: 24rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: relative;
}

.callphone-box{
     width: 100rpx;
    height: 42rpx;
    position: absolute;
    top: 50rpx;
    right: 25rpx;
    color: #666;
}
.callphone-img{
      width: 42rpx;
    height: 42rpx;
    float: right
}
.nearbyshop-distance{
    width: auto;
    height: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 110rpx;
    right: 25rpx;
    color: #666;
    font-size: 24rpx
}
.nearbyshop-map-box{
    width: 140rpx;
    height: 30rpx;
    position: absolute;
    bottom: 15rpx;
    right: 25rpx;
    color: #666;
    font-size: 24rpx;
    display: flex;
    justify-content: space-around;
    align-items: center
}
.store-img {
    width: 150rpx;
    height: 150rpx;
    border: 1px solid #f8f8f8;
}
.storeImg{
    width: 100%
}
image{
    width: 100%;
    height: 100%
}
.map-img{
    width: 24rpx;
    height: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center
}
.store-details-box {
    width: 500rpx;
    height: auto;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.storename {
    width: 350rpx;
    height: 40rpx;
    line-height: 40rpx;
    /* background: #f00; */
    color: #333;
    font-size: 34rpx;
    display: block;
overflow: hidden;
white-space: nowrap;
text-overflow:ellipsis;
}
.reward_box{
    width: 260rpx;
    color: #e01212;
    font-size: 22rpx;
    /* background: #f66 */
}
.reward_text{
    
    width: 100rpx;
    background: #fdeddd
}
.reward_money{
    margin-left: 20rpx
}

.office-hour {
    width: 80%;
     height: 40rpx;
