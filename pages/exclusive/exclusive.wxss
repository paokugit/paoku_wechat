/* pages/exclusive/exclusive.wxss */

page {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    background: #fff;
}

.exclusive-box {
    width: 100%;
    height: 100%;
}

.exclusive-bg {
    width: 100%;
    height: 216rpx;
}

image {
    width: 100%;
    height: 100%;
}

.con_box {
    width: 100%;
    height: auto;
    background: #fff;
    margin-top: 10rpx;
}

.con-item-box {
    width: 94%;
    padding: 0 3%;
    height: 350rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
}

.good-img {
    width: 240rpx;
    height: 240rpx;
}

.good-info {
    width: 60%;
    height: 240rpx;
}

.good-tit {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #333;
    font-size: 34rpx;
}

.good-desc {
    font-size: 26rpx;
    height: 80rpx;
    line-height: 40rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #5f5f5f;
}

.readbtn {
    width: 160rpx;
    height: 60rpx;
    background: #01d7a1;
    border-radius: 30rpx;
    color: #fff;
    font-size: 30rpx;
    position: absolute;
    right: 2%;
    bottom: 13%;
    line-height: 60rpx;
    text-align: center;
}
