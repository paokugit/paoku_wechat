/* pages/exclusive/exclusive.wxss */
page {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    /* background: #f8f8f8; */
    background: pink
}
.exclusive-box{
    width: 100%;
    height: 100%;
}
.exclusive-bg{
    width: 100%;
    height: 216rpx;
}
image{
    width: 100%;
    height: 100%
}
.con_box{
    width: 100%;
    height: 800rpx;
    background: #fff;
    margin-top: 10rpx
}
.con-item-box{
    width: 94%;
    padding: 0 3%;
    height: 350rpx;
    background: #eee;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
}
.good-img{
    width: 240rpx;
    height: 240rpx;
    background: #f00;
}
.good-info{
    width: 60%;
    height: 240rpx;
    background: #ff0;

}
.good-tit{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    background: #0ff;
    color: #333;
    font-size: 34rpx;
}
.readbtn{
    width: 160rpx;
    height: 60rpx;
    background: #01d7a1;
    border-radius: 30rpx;
    color: #fff;
    font-size: 30rpx;
    position: absolute;
    right: 2%;
    bottom: 13%;
    line-height: 60rpx;
    text-align: center;
}