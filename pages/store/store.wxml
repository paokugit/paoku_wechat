<navigation id='Navigation' show-icon='{{showIcon}}' title="折扣宝优选"></navigation>
<loading wx:if="{{!show}}">加载中...</loading>
<view wx:if="{{show}}" class="storeBox">
  <view class="day-img">
    <image mode="widthFix" src="{{topImg}}"></image>
  </view>
  <view class='swipercontent'>
    <swiper autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{swiperCurrent}}" bindchange="swiperChange" circular='true'>
      <block wx:for="{{imgUrls}}" wx:key="unique">
        <swiper-item>
          <image src="{{item.image}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">
      <block wx:for="{{imgUrls}}" wx:key="unique">
        <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>
  <!-- 活动items-开始 -->
  <view class="activity-item-box">

    <swiper class='carousel_swiper' indicator-dots="{{dots}}" indicator-color="#e5fff9" indicator-active-color="#01d7a1" autoplay="true" interval='5000' circular='true'>
      <block wx:for="{{cateuse}}" wx:for-index="i" wx:key="key">
        <swiper-item>
          <!-- <image class="carouselImg" src="{{item}}" mode='aspectFill'></image> -->
          <view class="activity-kind">
            
            <block wx:key="key" wx:for="{{cate}}" wx:for-index="j" wx:if="{{ ( j >= ( i-0 )*10 ) && ( j < (i+1) * 10 ) }}">
              <view class="activity-items" data-type="{{item.id}}" data-text="{{item.title}}" catchtap="activityBtn">
                <image class="activity-img" src="{{item.image}}"></image>
                <text class="activity-title">{{item.title}}</text>
              </view>
            </block>
          
          </view>
        </swiper-item>
        <!-- <swiper-item style="background:#0f0"></swiper-item> -->
      </block>
    </swiper>
  </view>
  <!-- 活动items-结束 -->
  <!-- 推荐 -->
  <view class="recommend-box">
    <view class="recommend-items" wx:for="{{middle}}" wx:key="index">
      <image src="{{item.image}}"></image>
    </view>
  </view>
  <!-- 推荐 -->
  <!-- 快报 -->
  <view class="news-box">
    <view class="news-left">
      <image src="{{globalimg}}/kuaibao@2x.png"></image>
    </view>
    <view class="news-right">
      <swiper autoplay="true" interval="2000" circular="true" vertical="true">
        <block wx:for="{{notice}}" wx:key="index">
          <swiper-item>
            <text class="news-text">{{item.title}}</text>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
