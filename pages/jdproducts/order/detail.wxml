<view class="{{isIpx?'fui-iphonex-button':''}}"></view>
<block>
  <block wx:if="{{!show}}">
    <loading>加载中...</loading>
  </block>
</block>
<block>
  <block wx:if="{{show}}">
    <navigation id='Navigation' show-icon='{{showIcon}}' title="订单详情"></navigation>
    <view class="page navbar {{seckill_color}} {{paddingb}}">
      <view class="fui-list bg">
        <view class="row" style="font-size:34rpx">
          <view class="">{{orderstatus}}</view>
        </view>
        <view class="order-price">订单金额(含运费):¥
          <text>{{orderprice}}</text>
        </view>
      </view>
      <block>
        <block>
          <view class="fui-list-group">
            <view class="fui-list" hoverClass="none">
              <view class="fui-list-media">
                <view class="fui-list-icon">
                  <text class="icox icox-dingwei1"></text>
                </view>
              </view>
              <view class="fui-list-inner">
                <view class="" style="font-size:28rpx;line-height: 1.2rem;height: 1.2rem;">{{realname}} {{realmobile}}</view>
                <view class="text" style="font-size:26rpx;color:#666">{{realprovince}}{{realcity}}{{realarea}}{{realaddress}}</view>
              </view>
            </view>
          </view>
        </block>
      </block>
      <view class="fui-list-group" style="padding-bottom:20rpx">
        <view class="fui-list-group-title">
          <view class="fui-list-icon">
            <text class="icox icox-dianpu1"></text>
          </view>
          <text class="shop" style="margin-left:6rpx">跑库</text>
        </view>
        <block>
          <navigator class="fui-list goods-item" openType="redirect" url="/pages/goods/detail/index?id={{item.id}}">
            <view class="fui-list-media">
              <image class="goods_img" src="{{globalimg}}/orange.png"></image>
            </view>
            <view class="fui-list-inner" style="height:140rpx">
              <view class="text">橙子</view>
              <view class="subtitle">啦</view>
            </view>
            <view class="price text-right" style="height:140rpx">
              <view class="text-right">¥
                <text>66</text>
              </view>
              <view class="text-right" style="color:#666">x
                <text>2</text>
              </view>
            </view>
          </navigator>
        </block>
      </view>
      <view class="fui-cell-group price-cell-group">
        <view class="fui-cell">
          <view class="fui-cell-label">商品小计</view>
          <view class="fui-cell-info"></view>
          <view class="fui-cell-remark noremark">¥ 66</view>
        </view>
        <view class="fui-cell">
          <view class="fui-cell-label">运费</view>
          <view class="fui-cell-info"></view>
          <view class="fui-cell-remark noremark">¥ 6</view>
        </view>
        <view class="fui-cell">
          <view class="fui-cell-label" style="width:auto;">实付费(含运费)</view>
          <view class="fui-cell-info"></view>
          <view class="fui-cell-remark noremark">
            <text class="text-danger">
                            <text style="font-size:30rpx">¥ 66.00</text>
            </text>
          </view>
        </view>
      </view>
      <view class="fui-cell-group">
        <view class="order-info">
          <view class="fui-cell-label" style="font-size:24rpx;color:#999">
            <text class="fui-cell-label" selectable="true">订单编号：123456</text>
          </view>
          <view class="fui-cell-label" style="font-size:24rpx;color:#999">
            <text class="fui-cell-label" selectable="true">创建时间：123456</text>
          </view>
          <block>
            <block>
              <view class="fui-cell-label" style="font-size:24rpx;color:#999">
                <text class="fui-cell-label" selectable="true">支付时间：2019.11.30</text>
              </view>
            </block>
          </block>
        </view>
      </view>
      <view class="fui-footer aa {{iphonexnavbar}}">
        <block>
          <block>
            <button class="btn btn-default btn-default-o pull-left" openType="contact" sessionFrom="weapp" showMessageCard="true">
              <text class="icox icox-customerservice"></text>客服
            </button>
          </block>
        </block>
        <block>
          <block>
            <button class="btn btn-default btn-default-o pull-left" bindtap="shouhoubtn">
              申请售后
            </button>
          </block>
        </block>
        <block>
          <block>
            <block>
              <block>
                <view class="btn btn-default btn-default-o btn-sm">
                  <picker bindchange="cancel" range="{{cancel}}" value="{{cancelindex}}">取消订单</picker>
                </view>
              </block>
            </block>
            <block>
              <block>
                <navigator class="btn btn-danger-o btn-sm" url="/pages/order/pay/index?id={{order.id}}">支付订单</navigator>
              </block>
            </block>
            <block>
              <block>
                <view bindtap="delete" class="btn btn-default btn-default-o btn-sm" data-type="1">删除订单</view>
              </block>
            </block>
            <block>
              <block>
                <navigator class="btn btn-default btn-default-o btn-sm" url="/pages/order/comment/index?id={{order.id}}">追加评价</navigator>
              </block>
            </block>
            <block>
              <block>
                <navigator class="btn btn-default btn-default-o btn-sm" url="/pages/order/comment/index?id={{order.id}}">评价</navigator>
              </block>
            </block>
            <block>
              <block>
                <view bindtap="finish" class="btn btn-default btn-default-o btn-sm">确认收货</view>
              </block>
            </block>
            <block>
              <block>
                <view class="btn btn-default btn-sm" bindtap='refundbtn'>{{order.refundtext}}</view>
              </block>
            </block>
            <block>
              <block>
                <view class="btn btn-default btn-sm" bindtap='drawbackbtn'>{{order.refundtext}}</view>
              </block>
            </block>

            <block>
              <block>
                <view bindtap="refundcancel" class="btn btn-default-o btn-sm btn-cancel">取消申请</view>
              </block>
            </block>
          </block>
        </block>
        <block>
          <block>
            <view bindtap="delete" class="btn btn-default btn-default-o btn-sm" data-orderid="{{order.id}}" data-type="2">
              彻底删除订单
            </view>
            <view bindtap="delete" class="btn btn-default btn-default-o btn-sm" data-orderid="{{order.id}}" data-type="0">
              恢复订单
            </view>
          </block>
        </block>
      </view>
    </view>
  </block>
</block>