<view class="{{isIpx?'fui-iphonex-button':''}}"></view>
<block>
  <block wx:if="{{!show}}">
    <loading>加载中...</loading>
  </block>
</block>
<block>
  <block wx:if="{{show}}">
    <navigation id='Navigation' show-icon='{{showIcon}}' title="确认订单"></navigation>
    <view class="page footer {{paddingb}}">
      <view>
        <block>
          <block>
            <view class="fui-cell-group" id="addressInfo">
              <block>
                <block>
                  <navigator class="fui-cell" hoverClass="none" openType="navigate" style="padding-top:32rpx;padding-bottom:32rpx" url="/pages/member/address/select">
                    <view class="fui-cell-icon" style="margin-right:24rpx">
                      <text class="icox icox-dingwei1"></text>
                    </view>
                    <view class="fui-cell-text textl info">
                      <view class="has-address ">
                        <view>收货人：</view>
                        <text class="name">啦啦啦</text>
                        <text class="mobile">18236962763</text>
                      </view>
                      <view class="adress">河南省郑州市新郑市</view>
                    </view>
                    <view class="fui-cell-remark"></view>
                  </navigator>
                </block>
              </block>
              <!-- 没有收货地址 -->
              <block>
                <block>
                  <view class="fui-cell" hoverClass="none" bindtap="addadress" style="padding-top:32rpx;padding-bottom:32rpx">
                    <view class="fui-cell-text textl info" style="display:flex;justify-content: center;">
                      <view class="fui-cell-icon">
                        <text class="icox icox-icon02" style="color:#ff5555"></text>
                      </view>
                      <view class="text no-address" data-type="open">添加收货地址</view>
                    </view>
                    <view class="fui-cell-remark"></view>
                  </view>
                </block>
              </block>
            </view>
          </block>
        </block>
        <block>
          <view class="fui-list-group">
            <navigator class="fui-list-group-title" hoverClass="none" openType="switchTab" url="/pages/index/index">
              <view class="fui-cell-icon" style="margin-right:12px">
                <text class="icox icox-dianpu1"></text>
              </view>
              <text class="shop">糖果的店</text>
            </navigator>
            <block>
              <view class="fui-list goods-item noclick">
                <view class="fui-list-media">
                  <image class=" goods_img" src="{{imagePath}}"></image>
                </view>
                <view class="fui-list-inner" style="position:relative;">
                  <view class="nametext">{{goodstitle}}</view>
                  <view class="goodstandard">白色蓝色粉色</view>
                  <view class="price_count">
                    <view class="price_box">
                      <text style="color:#ff5555;font-size:24rpx">￥</text>
                      <text style="color:#ff5555;font-size:32rpx;margin-left:4rpx">{{goodsprice}}</text>
                    </view>
                    <!-- <view class="stepper">
                      <text class="{{minusStatus}}" bindtap="bindMinus">-</text>
                      <input type="number" bindchange="bindManual" value="{{num}}" />
                      <text class="normal" bindtap="bindPlus">+</text>
                    </view> -->
                  </view>
                </view>
              </view>
            </block>
            <block>
              <block>
                <view class="fui-list no-border" style="background: #f9f9f9;margin-top: 4rpx">
                  <view class="fui-list-inner">
                    <view class="row-remark">共
                      <text style="margin-left:4rpx;margin-right:4rpx">{{num}}</text> 件
                    </view>
                  </view>
                </view>
              </block>
            </block>
          </view>
        </block>
        <view class="fui-cell-group">
          <view class="fui-cell fui-cell-textarea">
            <view class="fui-cell-label">
              买家留言
            </view>
            <view class="fui-cell-info">
              <block>
                <block>
                  <textarea bindinput="dataChange" id="remark" placeholder="50字以内（选填）" rows="2"></textarea>
                </block>
              </block>
            </view>
          </view>
        </view>
        <view class="fui-cell-group">
          <view class="fui-cell">
            <view class="fui-cell-label">商品小计</view>
            <view class="fui-cell-info"></view>
            <view class="fui-cell-remark noremark">¥
              <text>{{goodsprice}}</text>
            </view>
          </view>
        </view>
        <view class="fui-cell-group">
          <view class="fui-cell">
            <view class="fui-cell-label">运费</view>
            <view class="fui-cell-info"></view>
            <view class="fui-cell-remark noremark">¥
              <text>{{weightprice}}</text>
            </view>
          </view>
        </view>
      </view>
      <view class="fui-footer {{iphonexnavbar}}">
        <view class="tool nopadding">
          <view class="text">
            <view class="title text-right">需付：
              <text class="text-danger">{{payprice}}元</text>
            </view>
          </view>
          <view class="btns">
            <text bindtap="submit" class="btn btn-danger {{submit&&'disabled'}}">立即支付</text>
          </view>
        </view>
      </view>
      <view class="fui-toast {{FoxUIToast.show?'in':'out'}}">
        <view class="text">{{FoxUIToast.text}}</view>
      </view>
      <block>
        <block wx:if="{{isIpx}}">
          <view style="hight: 50rpx;"></view>
        </block>
      </block>
    </view>
  </block>
</block>