<navigation id='Navigation' show-icon='{{showIcon}}' title="换货"></navigation>
<view class='return-box'>
  <view class="goodscon">
    <image class="goodsImg"></image>
    <view class="goodsinfo">
      <view class="goodstitle">商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称</view>
      <view class="price-num">
        <text style="color:#999;font-size:24rpx">单价:<text style="color:#333;font-size:24rpx;margin-left:4rpx">￥199.00</text></text>
        <text style="color:#999;font-size:24rpx;margin-left:18rpx">购买数量:<text style="color:#333;font-size:24rpx;margin-left:4rpx">1</text></text>
        <text style="color:#999;font-size:24rpx;margin-left:18rpx">申请数量:<text style="color:#333;font-size:24rpx;margin-left:4rpx">1</text></text>
      </view>
    </view>
  </view>
  <view class="reasonCon">
    <view class="reason-box">
      <!-- 申请原因 -->
      <view style="padding-bottom:24rpx;">
        <view class="reason-top">
          <text style="color:#999;font-size:24rpx">申请原因</text>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{statearray}}">
            <text style="color:#333;font-size:24rpx">{{defaults}}</text>
            <image class="dianimg" src="{{globalimg}}/diandian.png"></image>
          </picker>
        </view>
        <view class="suggest">{{index==0?"请保持商品完好":index==1?"请您描述问题并上传收到商品图片":index==2?"请您先在包装内仔细查找,如仍有问题请具体描述问题":""}}</view>
      </view>
      <view style="width:100%;height:2rpx;background:#f8f8f8"></view>
      <!-- 文本域 -->
      <view class='problem-desc'>
        <textarea placeholder='请描述申请售后服务的具体原因,还可至少上传最多9张图片哦~' bindinput='inputchange' value='{{inputtext}}'></textarea>
      </view>
      <!-- 上传图片 -->
      <view class='upload_box'>
        <view class='printscreen-box'>
          <view class="fui-cell" style='display:flex;flex-wrap:wrap'>
            <view class="fui-images fui-images-sm" style=' display:flex;flex-wrap:wrap'>
              <block wx:for="{{imgs}}" wx:key="{{index}}">
                <image catchtap="upload" style='width:120rpx;height:120rpx;margin-right:20rpx' class="image image-sm" data-index="{{index}}" data-type="image-preview" src="{{item}}">
                  <text catchtap="upload" class="image-remove" data-index="{{index}}" data-type="image-remove">
                                            <text class="icox icox-close"></text>
                  </text>
                </image>
              </block>
            </view>
            <view catchtap="upload" class="fui-uploader fui-uploader-sm" data-type="image" style='width:120rpx;height:120rpx'></view>
          </view>
        </view>
        <view class='upload-text'>为了帮您更好的解决问题,请务必上传照片凭证</view>
      </view>
    </view>
  </view>
  <!-- 返回方式 -->
  <view class="returnbox">
    <view class="returnbox-top">
      <view style="color:#999;font-size:24rpx">返回方式</view>
      <view class="refund-type-box" bindtap="returnbtn">
        <view class="refund-type">{{returntype}}</view>
        <image class="dianimg" src="{{globalimg}}/diandian.png"></image>
      </view>
    </view>
    <view class="returnbox-bottom">如需个人原因退货,将在退款时扣除xx元上门取件费</view>
  </view>
  <!-- 个人信息(送货至提货点和快递至京东显示个人信息) -->
  <view class="informa-box">
    <view class="info-name">
      <image class="nameimg" src="{{globalimg}}/wode1.png"></image>
      <input class="nameipt" value="{{name}}" placeholder="请输入联系人" type="text" bindinput="namechange"></input>
    </view>
    <view style="width:100%;height:2rpx;background:#f8f8f8"></view>
    <view class="info-phone">
      <image class="nameimg" src="{{globalimg}}/dianhua36.png"></image>
      <input class="phoneipt" value="{{phonenumber}}" placeholder="请输入联系方式" maxlength="11" bindinput="phonechange"></input>
    </view>
  </view>
  <!-- 上门取件显示收货地址和日期 -->
  <view class="address-date-box">
    <view class="address-box">
      <image class="addressimg" src="{{globalimg}}/dd_icon_dz@2x.png"></image>
      <view class="address-info">
        <view class="address-name">糖果 18789689756</view>
        <view class="detail-address">地址：河南省郑州市新郑市龙湖镇紫金山南路金秋乐园12号楼河南省郑州市新郑市龙湖镇</view>
      </view>
      <view class="fanhui-box">
        <image class="fanhuiimg" src="{{globalimg}}/thh_inco_fangx@2x.png"></image>
      </view>
    </view>
    <view style="width:100%;height:2rpx;background:#f8f8f8"></view>
    <view class="date-box">
      <image class="dateimg" src="{{globalimg}}/date01.png"></image>
      <view class="section">
        <picker class="sec-picker" mode="date" value="{{time}}" start="{{time}}" end="" bindchange="bindDateChange">
          <view class="picker">
            {{time}}
          </view>
        </picker>
        <view class="dian-abso">
          <image class="dianimg" src="{{globalimg}}/diandian.png"></image>
        </view>
      </view>
    </view>
  </view>
  <!-- 收货地址 -->
  <view class="switch-box">
    <view class="dizhi">收货地址</view>
    <view>
      <text class="switchstatus==true?'switch-texta':'switch-textb'">与取件地址保持一致</text>
      <switch style='zoom:.6;' checked data-isCigaretteButt='{{isCigaretteButt}}' bindchange="switchChange" />
    </view>
  </view>
  <view class='submit-box' bindtap='submitbtn'>
    <view class='submit-btn'>提交</view>
  </view>
</view>
<!-- 返回方式 -->
<block>
  <block wx:if="{{returnmask}}">
    <view class="return-mask">
      <view class="return-mask-position">
        <view class="returnmask-con">
          <view class="paytype-tit">
            <text>返回方式</text>
            <view class="guanbi-box" bindtap="closereturn">
              <image class="guanbi" src="{{globalimg}}/guanbi_b.png"></image>
            </view>
          </view>
          <!-- 单选框 -->
          <radio-group class="radio-group" bindchange="radioChange">
            <label wx:for="{{list}}" wx:key="{{index}}" data-id="{{item.id}}" style="display:flex;justify-content: space-between;">
              <text>{{item.name}}</text>
              <radio value="{{item.name}}" />
            </label>
          </radio-group>
          <!-- 确定 -->
          <view class="radioconfirm" bindtap="radioconfirmbtn">确定</view>
        </view>
      </view>
    </view>
  </block>
</block>