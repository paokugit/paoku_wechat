/* pages/jdproducts/exchange/type.wxss */

page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  background: #f8f8f8
}

.goodscon {
  width: 96%;
  height: 200rpx;
  background: #fff;
  padding: 0 2%;
  display: flex;
  align-items: center;
  border-radius: 0 0 20rpx 10rpx;
}

.goodsImg {
  width: 140rpx;
  height: 140rpx;
  background: #f00;
}

.goodsinfo {
  width: 500rpx;
  height: 140rpx;
  margin-left: 20rpx;
}

.goodstitle {
  width: 500rpx;
  line-height: 35rpx;
  height: 70rpx;
  color: #333;
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price-num {
  width: 500rpx;
  height: 40rpx;
  margin-top: 10rpx;
}

.type-box {
  width: 94%;
  height: 500rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 30rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.retreat-con, .price-con {
  width: 94%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.retreat-con {
  border-bottom: 2rpx solid #f8f8f8;
}

.type-left {
  width: auto;
  height: auto;
}

.retreatimg {
  width: 44rpx;
  height: 44rpx;
}

.retreattext {
  color: #333;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.type-right {
  width: auto;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.retreat-other {
  color: #999;
  font-size: 22rpx;
  display: flex;
  flex-direction: column
}

.fanhuiimg {
  width: 10rpx;
  height: 16rpx;
  margin-left: 12rpx;
}
