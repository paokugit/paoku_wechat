/* pages/playmethod/feedback/feedback.wxss */

page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.return-box {
  width: 100%;
  height: 100%;
  /* background: pink; */
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.goodscon {
  width: 96%;
  height: auto;
  background: pink;
  padding: 24rpx 2%;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f8f8f8;
}

.goodsImg {
  width: 140rpx;
  height: 140rpx;
  background: #f00;
}

.goodsinfo {
  width: 500rpx;
  height: 140rpx;
  margin-left: 20rpx;
}

.goodstitle {
  width: 500rpx;
  line-height: 35rpx;
  height: 70rpx;
  color: #333;
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
