/* pages/discount/zkbaccount/zkbaccount.wxss */

page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  /* background: #f8f8f8; */
  background: #fff;
}

.price-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

image {
  width: 100%;
  height: 100%;
}

.swiper-tab {
  width: 60%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20%;
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  color: #333;
  font-size: 30rpx;
}

.swiper-tab-item {
  width: 160rpx;
  color: #434343;
}

.active {
  color: #f55;
  border-bottom: 4rpx solid #f55;
  font-weight: bold;
}

.juzhong {
  margin: 0 auto;
}

.domain {
  background-color: #f0f;
  height: 100%;
  margin: 0 10px;
}

.show {
  width: 100%;
  display: block;
  position: absolute;
  top: 100rpx;
}

.hidden {
  display: none;
}

.content01 {
  width: 100%;
  /* height: 200rpx; */
  height: 100%;
}

.content {
  width: 100%;
  /* height: 200rpx; */
  height: 100%;
}

.scroll {
  width: 100%;
  height: auto;
}

.apply-box, .record-box {
  width: 100%;
  height: auto;
}

.apply-tit {
  width: 100%;
  height: auto;
  padding: 12rpx 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.productInfo {
  width: 96%;
  height: auto;
  padding: 12rpx 2%;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-left {
  width: 80%;
  height: 120rpx;
  display: flex;
  align-items: center;
}

.proImg {
  width: 110rpx;
  height: 110rpx;
}

.proname {
  width: 400rpx;
  line-height: 35rpx;
  height: 70rpx;
  color: #333;
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-left: 10rpx;
}

.info-right {
  width: 20%;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.applybtn {
  width: 90rpx;
  height: 36rpx;
  font-size: 22rpx;
  color: #f55;
  border: 2rpx solid #f55;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 申请记录 */

.iptbox-box {
  width: 94%;
  height: auto;
  padding: 12rpx 3%;
}

.iptbox {
  width: 650rpx;
  height: 60rpx;
  background: #eee;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 0 6rpx;
  position: relative;
}

.searchipt {
  width: 600rpx;
  height: 60rpx;
  background: #eee;
  margin-left: 10rpx;
  color: #333;
  font-size: 24rpx;
}

.searchimg {
  width: 32rpx;
  height: 32rpx;
}

.guanbiimg {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 12rpx;
}

.record-tit {
  width: 94%;
  height: auto;
  padding: 12rpx 3% 0rpx;
  background: #fff;
}

.apply-time {
  width: 94%;
  height: auto;
  padding: 0rpx 3%;
}

.record-info {
  width: 94%;
  height: 110rpx;
  padding: 24rpx 3%;
  display: flex;
  align-items: center;
}

.record-info-right {
  width: 500rpx;
  height: 90rpx;
  margin-left: 10rpx;
}

.record-price {
  color: #333;
  font-size: 22rpx;
}

.apply-result-box {
  width: 94%;
  height: 100rpx;
  padding: 0 3%;
}

.result-con {
  width: 100%;
  height: 100rpx;
  background: #f8f8f8;
  display: flex;
  align-items: center;
}

.record-hint {
  width: 400rpx;
  line-height: 35rpx;
  height: 70rpx;
  color: #999;
  font-size: 22rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-left: 10rpx;
}
