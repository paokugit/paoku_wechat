page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  /* background: #f8f8f8; */
  background: #fff;
}

.listBox {
  width: 100%;
  height: auto;
  background: #f8f8f8;
}

image {
  width: 100%;
  height: 100%;
}
.swipercontent {
  width: 100%;
  height: 370rpx;
  position: relative;
}

swiper {
  width: 100%;
  height: 370rpx;
}

.slide-image {
  width: 100%;
  height: 370rpx;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dot {
  margin: 0 8rpx;
  width: 16rpx;
  height: 6rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
  opacity: 0.6
}

.dot.active {
  width: 26rpx;
  background: #fff;
}
