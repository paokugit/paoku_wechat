.explain-navbar {
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    position: absolute;
    top: 1200rpx;
}

.explain-navbar .expl {
    display: inline-block;
    font-size: 26rpx;
    color: #999;
