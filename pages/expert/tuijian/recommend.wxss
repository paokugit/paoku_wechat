.title{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #fff;
  border-top: 1px solid #f8f8f8;
}

.product{
  margin: 30rpx 24rpx; 
  padding: 24rpx; 
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.productImg{
  width: 220rpx;
  height: 220rpx;
}

.conTit{
  width: 400rpx;
  hanging-punctuation: 95rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.conMoney{
  position: relative;
  margin-top: 45rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.conMoneyA{
  color: rgb(224, 18, 18);
  font-size: 34rpx;
  margin-right: 10rpx;
}
.conMoneyB{
  color: rgb(146, 146, 146);
  font-size: 22rpx;
  text-decoration:line-through;
}
.btnGet{
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  
  border-radius: 50rpx;
}
.btnA{
  color: rgb(146, 146, 146);
  border: 1px solid #e5e5e5;
}
.btnB{
  color: rgb(255, 254, 254);
  background: rgb(1, 215, 161);
}

.colorCss{
  font-size: 34rpx;
  color: rgb(51, 51, 51);
}