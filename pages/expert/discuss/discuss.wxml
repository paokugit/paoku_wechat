<nav-bar navbar-data='{{nvabarData}}'></nav-bar>
<view class="expedite-box" style='margin-top:{{nvabarData.height}}px'>
  <view class="area">

    <view class="dingBu">
      <view class="dingLeft">
        <image src="{{detailList.avatar}}"></image>
        <view>{{detailList.nickname}}</view>
      </view>
      <view class="dingRight">{{detailList.create_day}}</view> 
    </view> 

    <view class="circleCssA">{{detailList.content}}</view>
 
    <view class="imgQu">
      <view class="{{detailList.img_len == 1 ? 'typeA' : detailList.img_le == 2 ? 'typeB' : 'typeC'}}" wx:for="{{detailList.img}}" wx:for-item="itemImg" wx:key="indexImg" data-src="{{itemImg}}" data-list="{{detailList.img}}"   bindtap="previewImage">
        <image class="typeImage" src="{{itemImg}}"></image>
      </view>
    </view>

    <navigator url="/pages/goods/detail/index?id={{detailList.goods_id}}" class="shangpin" wx:if="{{detailList.goods_id == 0?false:true}}">
      <image class="tuiImg" src="{{detailList.good.img}}"></image>
      <view>
        <view class="tuiTa">{{detailList.good.marketprice}}</view>
        <view class="tuiTb">{{detailList.good.subtitle}}</view>
        <view class="jiaGe">
          <view>
            <text class="xianJia">￥{{detailList.good.marketprice}}</text>
            <text class="yuanJia">￥{{detailList.good.productprice}}</text>
          </view>
          <view class="xiaoL">销量{{detailList.good.sales}}</view>
        </view>
      </view>
    </navigator>

    <view class="icon">
      <view class="cha-dian">
        <view class="circle_read">
          <image class="iconImg" src="{{globalimg}}/circle_read.png"></image>
          <text class="iconTxt">{{detailList.view_count}}</text>
        </view>
        <view class="circle_parise">
          <image class="iconImg" bindtap="support" data-type="1" data-supp="{{detailList.support}}" data-supportid="{{listId}}" src="{{globalimg}}/{{detailList.support == 0?'circle_parise@1.png':'circle_parise@2.png'}}"></image>
          <text class="iconTxt">{{detailList.zan_count}}</text>
        </view>
      </view>
      
      <view class="remove" bindtap="deleteBtn">删除此条动态</view>
    </view>

    <view class="head-portrait" wx:if="{{detailList.zan_list.length == 0?false:true}}">
      <view class="headList" style="{{hShow == '2'?'' : 'height:200rpx'}}">
        <view class="headImage" wx:for="{{detailList.zan_list}}" wx:for-item="listImg" wx:key="{{index}}">
          <image src="{{listImg}}"></image>
        </view>
      </view>

      <view class="dakai" bindtap="dakai">
        <image style="transform:rotate{{hShow == '1' ? '(180deg)' : '(0deg)'}}" src="{{globalimg}}/top@x1a.png"></image>
      </view> 
    </view>

    <view class="rePing" wx:if="{{detailList.hot.length == 0?false:true}}">
      <view class="rePingTxt fleCss">
        <image src="{{globalimg}}/reping.png"></image>
        <view>热评</view>
      </view>
    </view> 
  
    <view class="reList" wx:for="{{detailList.hot}}" wx:for-item="listHot" wx:key="{{indexHot}}">
      <view class="fleCss topRe">
        <view class="img-name fleCss">
          <image src="{{listHot.avatar}}"></image>
          <view>
            <view class="reName">{{listHot.nickname}}</view>
            <view class="reTime">{{listHot.create_time}}</view> 
          </view>
        </view>
        <view class="fleCss">
          <navigator url="/pages/expert/particulars/particulars" class="circle_news circle_read">
            <image class="iconImg" src="{{globalimg}}/circle_news.png"></image>
            <text class="iconTxt">{{listHot.comment_count}}</text>
          </navigator>

          <view class="circle_read">
            <image class="iconImg" bindtap="support" data-type="2" data-supp="{{listHot.support}}" data-supportid="{{listHot.id}}" src="{{globalimg}}/{{listHot.support == 0?'circle_parise@1.png':'circle_parise@2.png'}}"></image>
            <text class="iconTxt">{{listHot.zan_count}}</text>
          </view>
        </view>
      </view>
      <view class="circleCssB" bindlongpress="shadeCat" data-catid="{{listHot.id}}">{{listHot.content}}</view>
    </view>

    <view class="rePing" wx:if="{{newestList.length == 0?false:true}}">
      <view class="rePingTxt">
        <view>最新评论</view>
      </view>
    </view>

    <view class="reList" wx:for="{{newestList}}" wx:key="{{index}}">
      <view class="fleCss topRe">
        <view class="img-name fleCss">
          <image src="{{item.avatar}}"></image>
          <view>
            <view class="reName">{{item.nickname}}</view>
            <view class="reTime">{{item.create_time}}</view>
          </view>
        </view>
        <view class="fleCss">
          <navigator url="/pages/expert/particulars/particulars" class="circle_news">
            <image class="iconImg" src="{{globalimg}}/circle_news.png"></image>
            <text class="iconTxt">{{item.comment_count}}</text>
          </navigator>

          <view class="circle_read">
            <image class="iconImg" bindtap="support" data-type="2" data-supp="{{item.support}}" data-supportid="{{item.id}}" data-rep="1" src="{{globalimg}}/{{item.support == 0?'circle_parise@1.png':'circle_parise@2.png'}}"></image>
            <text class="iconTxt">{{item.zan_count}}</text>
          </view>
        </view>
      </view>
      <view class="circleCssB" bindlongpress="shadeCat" data-catid="{{item.id}}">{{item.content}}</view>
      <view class="twoReply" wx:if="{{item.comment.length == 0?false:true}}">
        <view wx:for="{{item.comment}}" wx:for-item="replyIt" wx:key="{{replyInde}}" bindlongpress="shadeCat" data-catid="{{replyIt.id}}">
          <text class="replyName">{{replyIt.nickname}}</text>回复<text class="replyName">{{replyIt.bnickname}}</text>：{{replyIt.content}}
        </view>
        <navigator class="allReply" wx:if="{{item.comment.length==2?false:true}}" url="/pages/expert/particulars/particulars">查看全部评论＞</navigator>
      </view>
    </view> 
    <view class="finish_inquire" wx:if="{{abcShow}}">查询完了哦</view>
  </view>

  <view class="comInt">
    <input class='solid-bottom' placeholder='我也说几句...' placeholder-class="palClass" maxlength="140" cursor-spacing="10" focus="true"></input>
    <text>发送</text>
  </view> 

  <view class="shade" wx:if="{{shadeShow}}" catchtap="shadeShow">
    <image class="shadeImg" src="{{globalimg}}/shanchu@2x.png" catchtap="delBTn"></image>
    <view class="icoDel icox icox-close" catchtap="shadeShow"></view>
  </view>

</view>