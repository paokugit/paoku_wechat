.listCon{
  background: #fff;
  margin: 20rpx 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 30rpx;
}

/* 头像、昵称、发布时间 */
.circleMes{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nameMes image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.timeMes{
  font-size: 22rpx;
  color: rgb(146, 146, 146);
}

/* 动态内容 */
.circleCon{
  margin: 20rpx 0 30rpx 0; 
}

/* 动态图片 */
.circleImg image{
  width: 212rpx;
  height: 212rpx;
  border-radius: 10rpx;
}


.circleCss{
  font-size: 30rpx;
  color: rgb(51, 51, 51);
}