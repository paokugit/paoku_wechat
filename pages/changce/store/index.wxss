.store_list {
    width: 100%;
    height: auto;
    overflow: hidden;
    border-bottom: solid 1px #e2e2e2;
    padding-bottom: 0px;
}

.store_top {
    padding: 15px 15px;
    height: auto;
    overflow: hidden;
}

.store_logo1 {
    display: block;
    float: left;
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
    margin-top: 33rpx;
}

.store_center {
    float: left;
    width: 50%;
    height: auto;
    overflow: hidden;
    padding-left: 10px;
    text-align: left;
    display: block;
}

.store_text1 {
    width: 100%;
    height: auto;
    overflow: hidden;
    font-size: 30rpx;
    color: #353535;
    padding-top: 15px;
    display: block;
}

.store_two {
    width: 100%;
    height: auto;
    overflow: hidden;
    padding-top: 9px;
}

.store_text2 {
    width: 55%;
    display: block;
    float: left;
    font-size: 24rpx;
    color: #aeaeae;
    font-weight: normal;
}

.store_text3 {
    width: 45%;
    display: block;
    float: right;
    font-size: 24rpx;
    color: #aeaeae;
    font-weight: normal;
    text-align: right;
}

.store_right {
    float: right;
    width: 20%;
    overflow: hidden;
    text-align: right;
}

.store_distance {
    font-size: 20rpx;
    color: #ff4b48;
    display: block;
    text-align: right;
    width: 100%;
    padding-top: 19px;
}

.in_store {
    font-size: 24rpx;
    color: #ff4b48;
    border-radius: 12px;
    border: solid 1px #ff4b48;
    width: 65%;
    line-height: 19px;
    display: block;
    text-align: center;
    float: right;
    margin-top: 10px;
}

.store_listimg {
    width: 90%;
    height: auto;
    float: right;
    overflow: hidden;
}

.list_img {
    width: 30%;
    display: inline-block;
    margin-right: 10px;
    position: relative;
    text-align: center;
    color: #353535;
    font-size: 15px;
}

.store_img {
    width: 100%;
    height: 6rem;
    display: block;
    border-radius: 7px;
}

.list_postion {
    width: 100%;
    height: 26px;
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 999;
}

.list_bg {
    width: 55px;
    height: 26px;
    display: block;
    float: right;
}

.list_price {
    width: 100%;
    display: block;
    text-align: right;
    color: #fff;
    font-size: 26rpx;
    position: absolute;
    bottom: 5px;
    right: 14rpx;
    z-index: 9999;
}

@media (max-width:320px) {
    .store_logo {
        width: 70px;
        height: 70px;
    }

    .list_postion {
        bottom: 5px;
    }

    .store_text1 {
        font-size: 15px!important;
    }

    .store_text2 {
        font-size: 12px;
    }

    .store_text3 {
        font-size: 12px;
    }

    .store_text1 {
        padding-top: 12px;
    }

    .store_distance {
        padding-top: 15px;
    }

    .list_img {
        margin-right: 9px;
    }
}

@media (min-width:378px) {
    .list_postion {
        bottom: 5px;
    }
}