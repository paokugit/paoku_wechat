    color: #333;
}
.hy-price{
    width: 100%;
    height:110rpx;
    font-size: 50rpx;
    color: #333;
}
.hy-dz{
    width: 100%;
    height: 60rpx;
    font-size: 36rpx;
    color: #333;
}
.hyflex{
    display: flex;
    justify-content: center;
    align-items: center
}
.pay-btn{
    width: 300rpx;
