page {
    width: 100%;
    height: 100%;
}

.bg_box {
    width: 100%;
    height: 240rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    border-top: 2rpx solid #f8f8f8
}
.bg_text_box {
    width: 722rpx;
    height: 232rpx;
    position: absolute;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.text-top {
    width: 100%;
    height: 170rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* background: #f00 */
}

.bg_text {
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
}

.bg_num {
    color: #fff;
    font-size: 60rpx;
    font-weight: bold;
    margin-top: 8rpx;
}

.text-bottom {
    width: 86%;
    height: 50px;
    line-height: 30rpx;
    padding: 0 7%;
    display: flex;
    justify-content: space-between;
    /* align-items: center; */
    text-align: right;
    padding-right: 10%

}
.text-bottom-left, .text-bottom-right{
    color: #fff;
    font-size: 26rpx
}
.text-num{
    margin-left: 10rpx
}
.greenbg {
    width: 722rpx;
    height: 232rpx;
    position: absolute;
    top: 0;
}

.row-text {
    width: 80rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
}

.img_bg-numox {
    width: 28rpx;
    height: 28rpx;
    margin-left: 20rpx;
}

image {
    width: 100%;
    height: 100%;
}

.com-down .subtitle {
    font-size: 24rpx;
    color: #999;
}

.com-down .image-32 {
    width: 32rpx;
    height: 32rpx;
}

.topimg {
    vertical-align: top;
}

.com-down .fui-list-media image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.fui-list {
    width: 98%;
    height: 150rpx;
    padding-right: 30rpx;
}

.com-down .fui-list-inner .row {
    font-size: 28rpx;
}

.fui-list-inner {
    width: 400rpx;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.com-down .row-remark {
    text-align: right;
    position: relative;
    flex-shrink: 0;
    padding-left: 25rpx;
    min-width: 150rpx;
    color: #000;
    font-size: 24rpx;
}

button::after {
    border: none;
}

button {
    background-color: #01d7a1;
}

.recommend-box {
    width: 100%;
    height: 90rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 0 0 20rpx 20rpx
}

.recommend-center {
    width: 90%;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.recommend-left {
    color: #1e1e1e;
    font-size: 28rpx;
}

.recommend-right {
    color: #9a9a9a;
    font-size: 28rpx;
}
.friend-nickname{
    width: 80px;
    height: 40rpx;
    line-height: 40rpx;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;

}
.img_box{
    width: 28rpx;
    height: 28rpx
}


.friend_inquire{
  width: 94%;
  height: 88rpx;
  padding: 0 3%;
  background: #fff;
  border-radius: 10rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  /* justify-content: center;  */
}
.friend_inquire image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}
.friend_inquire text{
  font-size: 30rpx;
  color: #9A9A9A;
}