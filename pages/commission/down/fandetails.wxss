/* pages/fandetails/fandetails.wxss */

.fandetails_all {
  width: 100%;
  height: 100%;
  background: #fff;
}

.fans_img {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.img_head {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  position: absolute;
  margin-left: 30rpx;
}

.fans_name_daren_date {
  width: auto;
  height: 120rpx;
  margin-left: 180rpx;
}

.friend_num_text {
  margin-right: 10rpx;
}

.fans_name {
  height: 40rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.fans_daren {
  width: 160rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  height: 40rpx;
  align-items: center;
  justify-content: left;
}

.membershipgrade {
  margin-left: 10rpx;
  width: 120rpx;
}

.fans_icon {
  width: 28rpx;
  height: 28rpx;
}

.fans_date {
  height: 40rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.friend_num_text {
  width: 140rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.friend_num {
  font-size: 35rpx;
  color: #333;
  /* font-weight: bold; */
  margin-top: 40rpx;
}

.friend_text {
  font-size: 24rpx;
  color: #999;
}

.tel_none {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  border-bottom: 1rpx solid rgb(240, 239, 239);
  top: 50rpx;
}

.tel_img {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: 30rpx;
}

.tel_text {
  position: absolute;
  right: 30rpx;
  font-size: 34rpx;
  color: #323232;
}

.dial_view {
  width: 100%;
  height: 264rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
}

.dial_text {
  width: 600rpx;
  height: 88rpx;
  background: #01d7a1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  font-size: 34rpx;
  color: #fff;
}

.dial_text_noen {
  width: 600rpx;
  height: 88rpx;
  background: #d7d7d7;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  font-size: 34rpx;
  color: #fff;
}
